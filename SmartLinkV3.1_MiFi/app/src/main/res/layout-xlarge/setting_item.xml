<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="?android:attr/listPreferredItemHeight" 
    android:padding="24dp">
    
    <TextView android:id="@+id/settingItemText"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/setting_wifi"
        android:layout_alignParentStart="true"
        android:textColor="@color/color_black"
        android:textSize="30sp"
        android:layout_centerVertical="true"
         />
    <!-- upgrade flag -->
    <ImageView android:id="@+id/flagUpgrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/settingItemText"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/setting_wifi"
        android:src="@drawable/upgrade_new"
        android:visibility="visible" />
    
    <ImageView android:id="@+id/flagLeftArrow"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:contentDescription="@string/setting_wifi"
        android:layout_marginEnd="25dp"
        android:src="@drawable/right_arrow_big"/>
    

</RelativeLayout>