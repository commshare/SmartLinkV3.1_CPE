<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
	<RadioGroup
         android:id="@+id/setting_network_wifi_type_selection"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="start" 
         android:background="@color/color_white">

         <RadioButton
             android:id="@+id/setting_network_wifi_type_wep"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginStart="15dp"
             android:layout_marginEnd="15dp"
             android:background="@android:color/transparent"
              android:textSize="20sp" 
             android:button="@null"
             android:drawableStart="@drawable/radiobutton"
             android:enabled="true"
             android:paddingBottom="15dip"
             android:paddingTop="15dip"
             android:text="@string/setting_wifi_wep"
             android:textColor="@color/color_black" />

         <View
             android:layout_width="fill_parent"
             android:layout_height="1dip"
             android:background="@color/main_bottom_divider" />

         <RadioButton
             android:id="@+id/setting_network_wifi_type_wpa"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginStart="15dp"
             android:layout_marginEnd="15dp"
             android:background="@android:color/transparent"
              android:textSize="20sp" 
             android:button="@null"
             android:checked="false"
             android:drawableStart="@drawable/radiobutton"
             android:enabled="true"
             android:paddingBottom="15dip"
             android:paddingTop="15dip"
             android:text="@string/setting_wifi_wpa"
             android:textColor="@color/color_black" />
         
         <View
             android:layout_width="fill_parent"
             android:layout_height="1dip"
             android:background="@color/main_bottom_divider" />

         <RadioButton
             android:id="@+id/setting_network_wifi_type_wpa2"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginStart="15dp"
             android:layout_marginEnd="15dp"
             android:background="@android:color/transparent"
              android:textSize="20sp" 
             android:button="@null"
             android:checked="false"
             android:drawableStart="@drawable/radiobutton"
             android:enabled="true"
             android:paddingBottom="15dip"
             android:paddingTop="15dip"
             android:text="@string/setting_wifi_wpa2"
             android:textColor="@color/color_black" />
         
         <View
             android:layout_width="fill_parent"
             android:layout_height="1dip"
             android:background="@color/main_bottom_divider" />

         <RadioButton
             android:id="@+id/setting_network_wifi_type_wpa_or_wpa2"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginStart="15dp"
             android:layout_marginEnd="15dp"
             android:background="@android:color/transparent"
              android:textSize="20sp" 
             android:button="@null"
             android:checked="false"
             android:drawableStart="@drawable/radiobutton"
             android:enabled="true"
             android:paddingBottom="15dip"
             android:paddingTop="15dip"
             android:text="@string/setting_wifi_wpa_or_wpa2"
             android:textColor="@color/color_black" />
     </RadioGroup>
     
	<RadioGroup
	    android:layout_marginTop="20dp"
         android:id="@+id/setting_network_wifi_wpa_type"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="start" 
         android:background="@color/color_white">

         <RadioButton
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginStart="15dp"
             android:layout_marginEnd="15dp"
             android:background="@android:color/transparent"
              android:textSize="20sp" 
             android:button="@null"
             android:drawableStart="@drawable/radiobutton"
             android:enabled="true"
             android:paddingBottom="15dip"
             android:paddingTop="15dip"
             android:text="@string/setting_wifi_tkip"
             android:id="@+id/setting_wifi_tkip"
             android:textColor="@color/color_black" />

         <View
             android:layout_width="fill_parent"
             android:layout_height="1dip"
             android:background="@color/main_bottom_divider" />

         <RadioButton
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginStart="15dp"
             android:layout_marginEnd="15dp"
             android:background="@android:color/transparent"
              android:textSize="20sp" 
             android:button="@null"
             android:checked="false"
             android:drawableStart="@drawable/radiobutton"
             android:enabled="true"
             android:paddingBottom="15dip"
             android:paddingTop="15dip"
             android:text="@string/setting_wifi_aes"
             android:id="@+id/setting_wifi_aes"
             android:textColor="@color/color_black" />
         
         <View
             android:layout_width="fill_parent"
             android:layout_height="1dip"
             android:background="@color/main_bottom_divider" />

         <RadioButton
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginStart="15dp"
             android:layout_marginEnd="15dp"
             android:background="@android:color/transparent"
              android:textSize="20sp" 
             android:button="@null"
             android:checked="false"
             android:drawableStart="@drawable/radiobutton"
             android:enabled="true"
             android:paddingTop="15dip"
             android:paddingBottom="15dip"
             android:text="@string/setting_network_mode_auto"
             android:id="@+id/setting_wifi_auto"
             android:textColor="@color/color_black" />
     </RadioGroup>
     
	<RadioGroup
	    android:layout_marginTop="20dp"
         android:id="@+id/setting_network_wifi_wep_type"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="start" 
         android:background="@color/color_white">

         <RadioButton
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginStart="15dp"
             android:layout_marginEnd="15dp"
             android:background="@android:color/transparent"
              android:textSize="20sp" 
             android:button="@null"
             android:drawableStart="@drawable/radiobutton"
             android:enabled="true"
             android:paddingBottom="15dip"
             android:paddingTop="15dip"
             android:text="@string/setting_wifi_open"
             android:id="@+id/setting_wifi_open"
             android:textColor="@color/color_black" />

         <View
             android:layout_width="fill_parent"
             android:layout_height="1dip"
             android:background="@color/main_bottom_divider" />

         <RadioButton
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginStart="15dp"
             android:layout_marginEnd="15dp"
             android:background="@android:color/transparent"
              android:textSize="20sp" 
             android:button="@null"
             android:checked="false"
             android:drawableStart="@drawable/radiobutton"
             android:enabled="true"
             android:paddingBottom="15dip"
             android:paddingTop="15dip"
             android:text="@string/setting_wifi_share"
             android:id="@+id/setting_wifi_share"
             android:textColor="@color/color_black" />
     </RadioGroup>
	
</LinearLayout>
