<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_pop_conner">

    <TextView
        android:id="@+id/tv_pop_login_reset_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/login_forgot_password_and_reset"
        android:textColor="@color/blue_btn"
        app:layout_marginLeftPercent="7%h"
        app:layout_marginRightPercent="7%h"
        app:layout_marginTopPercent="3%sh"
        app:layout_textSizePercent="2.7%sh" />

    <TextView
        android:id="@+id/tv_pop_login_reset_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_pop_login_reset_title"
        android:layout_centerHorizontal="true"
        android:text="@string/ok"
        app:layout_marginTopPercent="5%sh"
        app:layout_textSizePercent="3%sh" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@id/tv_pop_login_reset_ok"
        app:layout_marginTopPercent="3%sh" />

</com.zhy.android.percent.support.PercentRelativeLayout>
