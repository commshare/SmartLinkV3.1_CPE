<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e05455">

    <ImageView
        android:id="@+id/iv_guiderx2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:src="@drawable/guide2"
        app:layout_heightPercent="70%w"
        app:layout_marginTopPercent="10%h"
        app:layout_widthPercent="70%w" />

    <TextView
        android:id="@+id/tv_guiderx2_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_guiderx2"
        android:layout_centerHorizontal="true"
        android:text="@string/guide2_title"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_textSizePercent="2.5%h" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_guiderx2_title"
        android:layout_centerHorizontal="true"
        android:text="@string/guide2_description"
        android:textColor="@color/white"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%w"
        app:layout_marginTopPercent="3%h"
        app:layout_textSizePercent="2.3%h" />

</com.zhy.android.percent.support.PercentRelativeLayout>
