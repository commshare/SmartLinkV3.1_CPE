<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/repeat_bg" >

    <LinearLayout
        android:id="@+id/head_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:background="@drawable/selector_back_btn"
                android:enabled="false"
                android:text="@string/IDS_SMS_BUTTON_BACK"
                android:textColor="@drawable/common_button_text"
                android:textSize="@dimen/dimen_textsize_12sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/edit_layout"
                android:layout_width="70dip"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="right" >

                <Button
                    android:id="@+id/done_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dip"
                    android:background="@drawable/selector_common_button"
                    android:paddingLeft="12dip"
                    android:paddingRight="12dip"
                    android:text="@string/done"
                    android:textColor="@drawable/common_button_text"
                    android:textSize="@dimen/dimen_textsize_12sp"
                    android:textStyle="bold"
                    android:visibility="visible" />
            </LinearLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:layout_toLeftOf="@id/edit_layout"
                android:layout_toRightOf="@id/back_btn"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/m100_storage_main_local_storage"
                android:textColor="@color/color_white"
                android:textSize="@dimen/dimen_textsize_20sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:background="@drawable/title_splitter" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/directory_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/head_layout"
        android:layout_marginTop="1dip"
        android:background="@color/color_light_gray"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/root_directory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:contentDescription="@null"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:src="@drawable/m100_local_storage_grey" />

        <TextView
            android:id="@+id/directory_parent"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:clickable="true"
            android:ellipsize="middle"
            android:gravity="center"
             android:maxEms="7"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:singleLine="true"
            android:textColor="@color/color_white"
            android:textSize="18sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/directory_arrow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/m100_directory_arrow"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/directory"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:clickable="true"
            android:ellipsize="middle"
            android:gravity="center"
             android:maxEms="7"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:singleLine="true"
            android:textColor="@color/color_white"
            android:textSize="18sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/directory_arrow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/m100_directory_arrow"
            android:contentDescription="@null"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="fill_parent"
        android:layout_height="68dip"
        android:layout_alignParentBottom="true"
        android:background="@color/color_black"
        android:orientation="horizontal"
        android:paddingLeft="5dip"
        android:paddingRight="5dip" >

        <TextView
            android:id="@+id/download"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:clickable="true"
            android:drawablePadding="5dip"
            android:drawableTop="@drawable/storage_selector_download_button"
            android:gravity="center"
            android:paddingTop="5dip"
            android:singleLine="true"
            android:text="@string/toolbar_download"
            android:textColor="@color/color_grey"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/move"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:clickable="true"
            android:drawablePadding="5dip"
            android:drawableTop="@drawable/storage_selector_move_button"
            android:gravity="center"
            android:paddingTop="5dip"
            android:text="@string/toolbar_move"
            android:textColor="@color/color_grey" />

        <TextView
            android:id="@+id/rename"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:clickable="true"
            android:drawablePadding="5dip"
            android:drawableTop="@drawable/storage_selector_rename_button"
            android:gravity="center"
            android:paddingTop="5dip"
            android:text="@string/toolbar_rename"
            android:textColor="@color/color_grey" />

        <TextView
            android:id="@+id/delete"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:clickable="true"
            android:drawablePadding="5dip"
            android:drawableTop="@drawable/storage_selector_delete_button"
            android:gravity="center"
            android:paddingTop="5dip"
            android:text="@string/toolbar_delete"
            android:textColor="@color/color_grey" />

        <View
            android:layout_width="1dip"
            android:layout_height="wrap_content"
            android:background="@color/color_light_gray" />

        <CheckBox
            android:id="@+id/select_all"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:checked="false"
            android:drawablePadding="5dip"
            android:drawableTop="@drawable/selector_checkbox"
            android:gravity="center"
            android:paddingTop="5dip"
            android:text="@string/toolbar_select_all"
            android:textColor="@color/color_grey"
            android:textSize="14sp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_layout"
        android:layout_below="@id/directory_layout" >

        <ListView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            android:choiceMode="singleChoice"
            android:divider="@drawable/home_divider"
            android:dividerHeight="2dip"
            android:drawSelectorOnTop="false"
            android:listSelector="@drawable/selector_local_storage_item"
            android:overScrollMode="never" />

        <ProgressBar
            android:id="@+id/waiting_progress"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_gravity="center_vertical|center_horizontal"
            android:indeterminateDrawable="@drawable/progerss_connect"
            android:visibility="gone" />
    </FrameLayout>

</RelativeLayout>