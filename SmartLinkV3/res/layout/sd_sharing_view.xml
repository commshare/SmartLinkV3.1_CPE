<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:id="@+id/titls_sd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
	    <RelativeLayout
	        android:layout_width="fill_parent" 
	        android:layout_height="50dip"
	    	android:orientation="vertical"
	    	android:background="@color/color_blue" >
		    	<ImageButton 
		         android:id="@+id/btn_back"
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
		         android:layout_alignParentLeft="true"
		         android:layout_centerVertical="true"
		         android:layout_marginLeft="5dip"
		         android:padding="8dip"
		         android:src="@drawable/back"
				 android:background="@null"/>
			     <TextView
			         android:id="@+id/Back"
			         android:layout_width="fill_parent"
			         android:layout_height="wrap_content"
			         android:layout_centerVertical="true"
			         android:layout_toRightOf="@id/btn_back"
			         android:text="Back"
			         android:textColor="@color/color_white"
			         android:textSize="15sp" /> 
			    <TextView
			        android:id="@+id/title"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_centerInParent="true"
			        android:gravity="center"
			        android:singleLine="true"
			        android:text="SD Sharing"
			        android:textColor="@color/color_white"
			        android:textSize="20sp"
			        android:textStyle="bold" />
	    </RelativeLayout>  
	</LinearLayout>
	
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
       	android:layout_below="@id/titls_sd"
       	android:background="@color/color_white" 
        android:overScrollMode="never" >
	    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
	            <RelativeLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            android:layout_marginLeft="10dip"
	            android:layout_marginRight="10dip"
	            android:paddingBottom="6dip"
	            android:paddingTop="6dip" >
	            <Button
	                android:id="@+id/enable_dlna_btn"
	                android:layout_width="85dip"
					android:layout_height="35dip"
	                android:layout_alignParentRight="true"
	                android:layout_centerVertical="true"
	                android:background="@drawable/switch_off"
	                android:clickable="true" />
	
	            <TextView
	                android:id="@+id/enable_dlna_tag"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentLeft="true"
	                android:layout_toLeftOf="@id/enable_dlna_btn"
	                android:layout_centerVertical="true"
	                android:singleLine="false"
	                android:text="DLNA"
	                android:textSize="16sp" 
	                android:textColor="@color/color_black"/>
				</RelativeLayout>   
		        <View
		            android:layout_width="match_parent"
		            android:layout_height="2dip"
		            android:background="@drawable/home_divider" />
           
	            <RelativeLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            android:layout_marginLeft="10dip"
	            android:layout_marginRight="10dip"
	            android:paddingBottom="6dip"
	            android:paddingTop="6dip" >
	            <TextView
	                android:id="@+id/enable_service_name_tag"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentLeft="true"
	                android:layout_toLeftOf="@id/enable_dlna_btn"
	                android:layout_centerVertical="true"
	                android:singleLine="false"
	                android:text="service_name"
	                android:textSize="16sp" 
	                android:textColor="@color/color_black"/>
			</RelativeLayout>   

        
	        <View
	            android:layout_width="match_parent"
	            android:layout_height="2dip"
	            android:background="@drawable/home_divider" />
        
            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:paddingBottom="6dip"
            android:paddingTop="6dip" >
            <Button
                android:id="@+id/enable_sharing_btn"
                android:layout_width="85dip"
				android:layout_height="35dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/switch_off"
                android:clickable="true" />

            <TextView
                android:id="@+id/enable_sharing_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/enable_dlna_btn"
                android:layout_centerVertical="true"
                android:singleLine="false"
                android:text="SD Card Sharing"
                android:textSize="16sp" 
                android:textColor="@color/color_black"/>
			</RelativeLayout>   
	  
		  <View
	            android:layout_width="match_parent"
	            android:layout_height="2dip"
	            android:background="@drawable/home_divider" />
	  
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:paddingBottom="6dip"
            android:paddingTop="6dip" >
            <ProgressBar
                android:id="@+id/data_status_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="200dip"
                android:layout_height="15dip"
                android:layout_alignParentLeft="true"
                android:background="@drawable/data_status_progress_bg"
                android:max="100"
                android:progressDrawable="@drawable/data_progress_data" />

            <TextView
                android:id="@+id/data_status_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:singleLine="false"
                android:text="20GB of 30GB used"
                android:textSize="16sp" 
                android:textColor="@color/color_black"/>
			</LinearLayout>   
	        
	        <View
	            android:layout_width="match_parent"
	            android:layout_height="2dip"
	            android:background="@drawable/home_divider" />
        
	         <RelativeLayout
	            android:id="@+id/layout_settings"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dip"
	            android:layout_marginRight="10dip"
	            android:layout_marginTop="20dip"
	            android:orientation="horizontal" >
	
	            <TextView
	                android:id="@+id/tv_settings"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_centerVertical="true"
	                android:layout_marginLeft="10dip"
	                android:text="storage"
	                android:textColor="@color/color_black"
	                android:textSize="16sp" />
	
	            <ImageView
	                android:id="@+id/iv_settings_enter"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentRight="true"
	                android:layout_centerVertical="true"
	                android:layout_marginRight="10dip"
	                android:src="@drawable/enter_arrow" />
	        </RelativeLayout>
        </LinearLayout>
   </ScrollView>
</RelativeLayout>