<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/color_white" >

    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
	    <RelativeLayout
	        android:layout_width="fill_parent" 
	        android:layout_height="50dip"
	    	android:orientation="vertical"
	    	android:background="@color/main_title_background" >
		    <LinearLayout android:id="@+id/back_layout"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:clickable="true"
	            android:layout_alignParentLeft="true"
	            android:layout_centerVertical="true"
	            android:orientation="horizontal"
	            android:layout_marginLeft="10dip" >
		         <ImageView
		             android:id="@+id/back_button"
		             android:layout_width="wrap_content"
		             android:layout_height="wrap_content"
		             android:background="@drawable/back"
		             android:layout_gravity="center_vertical"
		             android:contentDescription="@null" />
		         <TextView
		             android:layout_width="wrap_content"
		             android:layout_height="wrap_content"
		             android:layout_gravity="center_vertical"
		             android:gravity="center"
		             android:text="@string/back"
		             android:singleLine="true"
		             android:layout_marginLeft="5dip"
		             android:textColor="@color/color_white"
		             android:textSize="18sp" />
	        </LinearLayout>

            <LinearLayout
                android:id="@+id/edit_layout"
                android:layout_width="70dip"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="right" >

                <TextView
                    android:id="@+id/edit_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dip"
                    android:padding="12dip"
                    android:text="@string/edit"
                    android:textColor="@drawable/common_button_text"
                    android:textSize="18sp"
                    android:visibility="visible" />
            </LinearLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:layout_toLeftOf="@id/edit_layout"
                android:layout_toRightOf="@id/back_layout"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/storage_main_local_storage"
                android:textColor="@color/color_white"
                android:textSize="@dimen/dimen_textsize_18sp"
                android:textStyle="bold" />
        </RelativeLayout> 
	</LinearLayout>

    <LinearLayout
        android:id="@+id/directory_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_layout"
        android:layout_marginTop="1dip"
        android:background="@color/color_white"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/single_directorys"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:contentDescription="@null"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:src="@drawable/local_storage_blue" />

        <TextView
            android:id="@+id/directory_parent"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:clickable="true"
            android:ellipsize="middle"
            android:gravity="center"
            android:maxEms="7"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:singleLine="true"           
            android:textColor="@color/color_black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/directory_arrow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/directory_arrow"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/directory"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:clickable="true"
            android:ellipsize="middle"
            android:gravity="center"
            android:maxEms="7"    
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:singleLine="true"           
            android:textColor="@color/color_black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/directory_arrow2"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/directory_arrow"
            android:contentDescription="@null" />
    </LinearLayout>

    <View
        android:id="@+id/layout_top_divider"
    	android:layout_below="@id/directory_layout"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="10dip"
        android:background="@color/color_divider" />
    
    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/main_tabbar_background"
        android:orientation="horizontal"
        android:paddingTop="10dip" >

        <TextView
            android:id="@+id/new_folder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:clickable="true"
            android:drawableTop="@drawable/selector_new_folder_button"
            android:text="@string/new_folder"
            android:textColor="@color/color_grey" />
        
        <TextView
            android:id="@+id/upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:clickable="true"
            android:drawableTop="@drawable/selector_toolbar_upload_button"
            android:text="@string/upload"
            android:textColor="@color/color_grey" />

        <TextView
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dip"
            android:clickable="true"
            android:drawableTop="@drawable/selector_toolbar_search_button"
            android:text="@string/search"
            android:textColor="@color/color_grey" />
    </RelativeLayout>
    
    <View
        	android:id="@+id/layout_bottom_divider"
        	android:layout_above="@id/bottom_layout"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/color_divider" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layout_bottom_divider"
        android:layout_below="@id/layout_top_divider" >

        <ListView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            android:choiceMode="singleChoice"
            android:divider="@color/color_divider"
            android:dividerHeight="0dip"
            android:drawSelectorOnTop="false"
            android:listSelector="@drawable/selector_local_storage_item"
            android:overScrollMode="never" />

        <TextView
            android:id="@+id/no_file"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="10dip"
            android:drawableTop="@drawable/empty_folder"
            android:gravity="center"
            android:text="@string/no_file"
            android:textColor="@color/color_grey"
            android:textSize="20sp" />

        <ProgressBar
            android:id="@+id/waiting_progress"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_gravity="center_vertical|center_horizontal"
            android:indeterminateDrawable="@drawable/progerss_connect"
            android:visibility="gone" />
    </FrameLayout>

</RelativeLayout>