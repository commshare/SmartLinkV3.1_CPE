<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:overScrollMode="never" >

    <LinearLayout
        android:id="@+id/frame_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
	        <LinearLayout
	            android:id="@+id/frame_connect"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="@color/home_connect_background_blue"
	            android:orientation="vertical" >
	            <RelativeLayout
	                android:id="@+id/connect_panel"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal"
	                android:layout_gravity="center_horizontal"
	                android:paddingBottom="12dip"
	                android:paddingLeft="10dip"
	                android:paddingRight="10dip"
	                android:paddingTop="12dip" >
	                <FrameLayout
	                    android:id="@+id/connect_layout"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_alignParentLeft="true"
	                    android:layout_centerVertical="true" >
	                    <Button
	                        android:id="@+id/connect_button"
	                        android:layout_width="85dip"
	                        android:layout_height="35dip"
	                        android:background="@drawable/switch_off"
	                        android:gravity="center" />
	                    <Button
	                        android:id="@+id/unlock_sim_button"
	                        android:layout_width="85dip"
	                        android:layout_height="30dip"
	                        android:background="@drawable/selector_common_button"
	                        android:gravity="center"
	                        android:text="@string/Home_unlock_pin"
	                        android:textColor="@color/color_white"
	                        android:textSize="14sp"
	                        android:visibility="gone" />
                	</FrameLayout>
                
	            	<FrameLayout
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_centerVertical="true"
	                    android:layout_toRightOf="@id/connect_layout"
	                    android:orientation="vertical"
	                    android:paddingLeft="10dip" >
		                <LinearLayout
		                    android:id="@+id/connect_to_layout"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:orientation="vertical" >
		                    <TextView
		                        android:id="@+id/connect_network"
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:ellipsize="end"
		                        android:singleLine="true"
		                        android:text="China Unicom"
		                        android:textColor="@color/color_white"
		                        android:textSize="20sp"/>"
		                    <TextView
		                        android:id="@+id/connect_label"
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:ellipsize="end"
		                        android:text="Connected"
		                        android:singleLine="true"
		                        android:textColor="@color/home_connect_status"
		                        android:textSize="16sp" />
		                </LinearLayout>
		                <LinearLayout
	                        android:id="@+id/sim_or_service_layout"
	                        android:layout_width="wrap_content"
	                        android:layout_height="match_parent"
	                        android:layout_gravity="center_vertical"
	                        android:gravity="center_vertical"
	                        android:orientation="vertical" >
	
	                        <TextView
	                            android:id="@+id/sim_or_service_state"
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:layout_gravity="center_vertical"
	                            android:ellipsize="end"
	                            android:gravity="center_vertical"
	                            android:singleLine="true"
	                            android:textColor="@color/color_white"
	                            android:textSize="18sp" />
	                    </LinearLayout>
	              </FrameLayout>
	              
	              <ProgressBar
                    android:id="@+id/waiting_progress"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6dip"
                    android:layout_toLeftOf="@id/connect_layout"
                    android:indeterminateDrawable="@drawable/progerss_connect"
                    android:visibility="gone" />  
	            </RelativeLayout>
	            
	            <RelativeLayout
	                android:id="@+id/data_panel"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal"
	                android:paddingBottom="12dip"
	                android:paddingLeft="10dip"
	                android:paddingRight="10dip"
	                android:paddingTop="12dip" >
	
	                <RelativeLayout
	                    android:id="@+id/alarm_layout"
	                    android:layout_width="80dip"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="20dip"
	                    android:layout_alignParentLeft="true"
	                    android:layout_centerVertical="true" >
	                    
	                    <ImageView
	                        android:id="@+id/home_alarm"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_alignParentLeft="true"
	                        android:layout_marginTop="3dip"
	                        android:contentDescription="@null"
	                        android:visibility="visible"
	                        android:background="@drawable/home_alarm" />
	                    <TextView
	                        android:id="@+id/alarm_status"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:ellipsize="end"
	                        android:singleLine="true"
	                        android:layout_toRightOf="@id/home_alarm"
	                        android:text="36Hrs 15Min"
	                        android:textColor="@color/color_white"
	                        android:textSize="16sp" />
	                </RelativeLayout>
	
	                <RelativeLayout
	                    android:id="@+id/usage_layout"
	                    android:layout_width="80dip"
	                    android:layout_height="wrap_content"
	                    android:layout_alignParentRight="true"
	                    android:layout_marginRight="20dip"
	                    android:layout_centerVertical="true" >
	                    
	                    <ImageView
	                        android:id="@+id/home_usage"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_alignParentLeft="true"
	                        android:layout_marginTop="3dip"
	                        android:contentDescription="@null"
	                        android:visibility="visible"
	                        android:background="@drawable/home_usage" />
	                    <TextView
	                        android:id="@+id/usage_status"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:ellipsize="end"
	                        android:singleLine="true"
	                        android:layout_toRightOf="@id/home_usage"
	                        android:text="32MB"
	                        android:textColor="@color/color_white"
	                        android:textSize="16sp"
	                        android:textStyle="bold" />
	                </RelativeLayout>
	            </RelativeLayout>
	            <View
	                android:layout_width="match_parent"
	                android:layout_height="2dip"
	                android:background="@color/home_divider" />
           	</LinearLayout>


            <RelativeLayout
		        android:id="@+id/sigel_panel"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:paddingBottom="12dip"
		        android:paddingLeft="10dip"
		        android:paddingRight="10dip"
		        android:paddingTop="12dip"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/left_signal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true" >

                    <ImageView
                        android:id="@+id/connct_signal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/signal_0"
                        android:contentDescription="@null" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/connect_roam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dip"
                            android:background="@drawable/home_network_roam"
                            android:contentDescription="@null"
                            android:visibility="invisible" />
                    </LinearLayout>
                </FrameLayout>

                <RelativeLayout
                    android:layout_width="120dip"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dip"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal" >
                 <TextView
                     android:id="@+id/connct_network_type"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentLeft="true"
                     android:textColor="@color/color_blue"
                     android:text="4G"
                     android:textSize="30sp"
                     android:textStyle="bold" />
                 </RelativeLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:background="@color/home_divider" />

            <RelativeLayout
                android:id="@+id/battery_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dip"
	            android:paddingLeft="10dip"
	            android:paddingRight="10dip"
	            android:paddingTop="12dip"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/battery_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:background="@drawable/battery_full"
                    android:contentDescription="@null" />

                 <RelativeLayout
                    android:id="@+id/battery_scale_layout"
                    android:layout_width="120dip"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dip"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal" >
                    <TextView
                        android:id="@+id/battery_scale_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="100"
                        android:textColor="@color/color_blue"
                        android:textSize="30sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="%"
                        android:layout_toRightOf="@id/battery_scale_label"
                        android:textColor="@color/color_blue"
                        android:textSize="16sp" />
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:background="@color/home_divider" />

            <RelativeLayout
                android:id="@+id/access_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dip"
             	android:paddingLeft="10dip"
             	android:paddingRight="10dip"
             	android:paddingTop="12dip"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/access_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:background="@drawable/home_connected_devices"
                    android:contentDescription="@null" />

                 <RelativeLayout
                    android:id="@+id/access_num_layout"
                    android:layout_width="120dip"
                    android:clickable="true"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dip"
                    android:orientation="horizontal" >
                    <TextView
                        android:id="@+id/access_num_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:singleLine="true"
                        android:text="4"
                        android:textColor="@color/color_blue"
                        android:textSize="30sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/access_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/access_num_label"
                        android:singleLine="true"
                        android:text="connected"
                        android:textColor="@color/color_blue"
                        android:textSize="16sp" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
</ScrollView>