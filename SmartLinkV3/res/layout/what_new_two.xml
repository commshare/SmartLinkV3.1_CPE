<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <ImageView
        android:id="@+id/guide2_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:contentDescription="@null"
        android:focusable="true"
        android:src="@drawable/guide2" />

    <TextView
        android:id="@+id/guide2_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/guide2_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/guide2_title"
        android:textColor="#333333"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/guide2_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/guide2_title"
        android:layout_centerHorizontal="true"
        android:text="@string/guide2_description"
        android:textColor="#999999"
        android:textSize="18sp" />

</RelativeLayout>