<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/color_white" >

    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
	    <RelativeLayout
	        android:layout_width="fill_parent" 
	        android:layout_height="50dip"
	    	android:orientation="vertical"
	    	android:background="@color/main_title_background" >
		    <Button
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="38dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:background="@drawable/selector_back_btn"
                android:text="@string/back"
                android:textColor="@color/color_white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/m100_storage_main_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/m100_storage_main_title"
                android:textColor="@color/color_white"
                android:textSize="@dimen/dimen_textsize_16sp"
                android:textStyle="bold" />
	    </RelativeLayout>  
	</LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/title_layout"
        android:background="@color/color_white"
        android:overScrollMode="never" >

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/item_media_box_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="20dip"
                    android:background="@drawable/settings_group_bk"
                    android:paddingBottom="10dip"
                    android:paddingTop="10dip"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/image_media_box"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dip"
                        android:background="@drawable/m100_item_media_box"
                        android:contentDescription="@null" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:layout_toRightOf="@id/image_media_box"
                        android:singleLine="true"
                        android:text="@string/m100_storage_main_media_box"
                        android:textColor="@color/color_black"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/enter_arrow1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dip"
                        android:background="@drawable/enter_arrow"
                        android:contentDescription="@null" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/item_hard_disc_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="20dip"
                    android:background="@drawable/settings_group_bk"
                    android:paddingBottom="10dip"
                    android:paddingTop="10dip" >

                    <ImageView
                        android:id="@+id/image_hard_disc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dip"
                        android:background="@drawable/m100_item_hard_disk"
                        android:contentDescription="@null" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:layout_toRightOf="@id/image_hard_disc"
                        android:singleLine="true"
                        android:text="@string/m100_storage_main_hard_disc"
                        android:textColor="@color/color_black"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dip"
                        android:background="@drawable/enter_arrow"
                        android:contentDescription="@null" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/item_no_ext_storage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="20dip"
                    android:background="@drawable/settings_group_bk"
                    android:paddingBottom="10dip"
                    android:paddingTop="10dip"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/image_no_storage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dip"
                        android:background="@drawable/item_storage_unavailable"
                        android:contentDescription="@null" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:layout_toRightOf="@+id/image_no_storage"
                        android:singleLine="true"
                        android:text="@string/m100_storage_main_no_external_storage"
                        android:textColor="@color/color_black"
                        android:textSize="16sp" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/samba_disable_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="30dip"
                        android:background="@drawable/m100_samba_switch_off"
                        android:contentDescription="@null" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dip"
                        android:gravity="center"
                        android:text="@string/m100_storage_main_samba_service_disabled"
                        android:textColor="@color/light_blue"
                        android:textSize="@dimen/dimen_textsize_16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="@string/m100_storage_main_samba_service_disabled_description"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/dimen_textsize_16sp" />

                    <RelativeLayout
                        android:id="@+id/item_samba_service"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_marginTop="20dip"
                        android:background="@drawable/settings_group_bk"
                        android:paddingBottom="10dip"
                        android:paddingTop="10dip" >

                        <ImageView
                            android:id="@+id/item_samba_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dip"
                            android:background="@drawable/m100_item_samba"
                            android:contentDescription="@null" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dip"
                            android:layout_toRightOf="@id/item_samba_image"
                            android:singleLine="true"
                            android:text="@string/m100_storage_main_samba_service"
                            android:textColor="@color/color_black"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/connect_button"
                            android:layout_width="85dip"
                            android:layout_height="35dip"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dip"
                            android:background="@drawable/switch_off" />
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/local_storage_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="20dip"
                    android:background="@drawable/settings_group_bk"
                    android:clickable="true"
                    android:paddingBottom="10dip"
                    android:paddingTop="10dip" >

                    <ImageView
                        android:id="@+id/device_info_setting_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dip"
                        android:background="@drawable/m100_item_local_storage"
                        android:contentDescription="@null" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:layout_toRightOf="@id/device_info_setting_image"
                        android:singleLine="true"
                        android:text="@string/m100_storage_main_local_storage"
                        android:textColor="@color/color_black"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dip"
                        android:background="@drawable/enter_arrow"
                        android:contentDescription="@null" />
                </RelativeLayout>
            </LinearLayout>

            <ProgressBar
                android:id="@+id/waiting_progress"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_gravity="center_vertical|center_horizontal"
                android:indeterminateDrawable="@drawable/progerss_connect"
                android:visibility="gone" />
        </FrameLayout>
    </ScrollView>

</RelativeLayout>