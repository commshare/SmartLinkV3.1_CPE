<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="193dip"
    android:background="@drawable/dialog_bg" >

    <LinearLayout
        android:id="@+id/ID_LOGIN_TOP_LAYOUT"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/login_close_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:contentDescription="@string/image_view_close_button"
                android:src="@drawable/close_button" />

            <TextView
                android:id="@+id/login_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/login_close_btn"
                android:paddingLeft="8dip"
                android:text="@string/login_title"
                android:textColor="@color/color_black"
                android:textSize="13sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/color_divider" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ID_LOGIN_CODE_LAYOUT"
        android:layout_width="fill_parent"
        android:layout_height="90dip"
        android:layout_below="@id/ID_LOGIN_TOP_LAYOUT" >

        <EditText
            android:id="@+id/login_edit_view"
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_marginTop="@dimen/dimen_20dip"
            android:background="@drawable/selector_edit_bg"
            android:inputType="textPassword"
            android:maxLength="16"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/login_label_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_edit_view"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_marginTop="5dip"
            android:textSize="12sp"
            android:text="@string/login_prompt_str"
            android:textColor="@color/error_font_color"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ID_LOGIN_BOTTOM_LAYOUT"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_below="@id/ID_LOGIN_CODE_LAYOUT" >

        <Button
            android:id="@+id/login_apply_btn"
            android:layout_width="80dip"
            android:layout_height="30dip"
            android:layout_centerInParent="true"
            android:background="@drawable/selector_send_btn"
            android:text="@string/button_apply"
            android:textColor="@drawable/common_button_text" />

        <Button
            android:id="@+id/login_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_style"
            android:text="@string/button_cancel"
            android:textColor="@color/font_color"
            android:visibility="gone" />

    </RelativeLayout>

</RelativeLayout>