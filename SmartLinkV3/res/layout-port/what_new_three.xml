<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/guide3_img"
        android:layout_width="wrap_content"
        android:layout_height="0sp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:layout_weight="5"
        android:contentDescription="@null"
        android:focusable="true"
        android:gravity="center"
        android:src="@drawable/guide3" />

    <TextView
        android:id="@+id/guide3_title"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/guide3_title"
        android:textColor="#333333"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/guide3_description"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:gravity="center|top"
        android:text="@string/guide3_description"
        android:textColor="#999999"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="0sp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:background="@drawable/what_new_start_btn"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/what_new_btn_text"
        android:textColor="#0089CF"
        android:textSize="30sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="2" />

</LinearLayout>