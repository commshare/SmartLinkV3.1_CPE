<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" 
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <RelativeLayout android:id="@+id/item_normal"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="10dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        <ImageView 
	        android:id="@+id/normal_icon" 
	        android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:background="@drawable/item_folder"/>
        <LinearLayout
            android:layout_width="match_parent" 
		    android:layout_height="wrap_content"
		    android:layout_toRightOf="@id/normal_icon"
		    android:layout_marginLeft="10dip"
		    android:layout_centerVertical="true"
		    android:orientation="vertical" >
		    <TextView
	           	android:id="@+id/name"
	           	android:layout_width="wrap_content"
	           	android:layout_height="wrap_content"
	           	android:singleLine="true"
	           	android:gravity="center"
	           	android:text="zhoudq"
	           	android:textSize="@dimen/dimen_textsize_12sp"
	           	android:textColor="@color/color_black"/>
		    <TextView
	           	android:id="@+id/directory"
	           	android:layout_width="wrap_content"
	           	android:layout_height="wrap_content"
	           	android:singleLine="true"
	           	android:gravity="center"
	           	android:text="zhangtao/zhoudq"
	           	android:textSize="@dimen/dimen_textsize_12sp"
	           	android:textColor="@color/color_grey"/>
	    </LinearLayout>
    </RelativeLayout>
    <View
        android:id="@+id/layout_top_divider"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="10dip"
        android:background="@color/color_divider" />
</LinearLayout>