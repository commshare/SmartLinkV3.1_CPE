<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_connect_type_select"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alcatel.smartlinkv3.ui.activity.ConnectTypeSelectActivity">

    <include
        android:id="@+id/main_header"
        layout="@layout/main_header" />
    <RelativeLayout
        android:id="@+id/connect_type_content_container"
        android:layout_below="@id/main_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/center_line"
            android:layout_centerInParent="true"
            android:background="@color/grey_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5dip"/>

        <RelativeLayout
            android:layout_above="@id/center_line"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/sim_card_pic"
                android:layout_centerInParent="true"
                android:src="@drawable/results_sim_dis"
                android:layout_width="@dimen/dimen_40dip"
                android:layout_height="@dimen/dimen_40dip"/>

            <TextView
                android:id="@+id/connect_type_sim_card_tv"
                android:textColor="@color/color_red"
                android:textSize="@dimen/font_size_normal"
                android:layout_marginTop="@dimen/dimen_20dip"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/sim_card_pic"
                android:text="@string/connect_type_select_sim_card_disable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@id/center_line"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/wan_port_pic"
                android:layout_centerInParent="true"
                android:src="@drawable/results_wan_dis"
                android:layout_width="@dimen/dimen_40dip"
                android:layout_height="@dimen/dimen_40dip"/>

            <TextView
                android:id="@+id/connect_type_wan_port_tv"
                android:textColor="@color/color_red"
                android:textSize="@dimen/font_size_normal"
                android:layout_marginTop="@dimen/dimen_20dip"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/wan_port_pic"
                android:text="@string/connect_type_select_wan_port_disable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
