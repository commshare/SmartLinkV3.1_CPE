<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/color_white" >

    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="fill_parent" 
	        android:layout_height="50dip"
	    	android:orientation="vertical"
	    	android:background="@color/main_title_background" >

            <LinearLayout android:id="@+id/back_layout"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:clickable="false"
	            android:layout_alignParentLeft="true"
	            android:layout_centerVertical="true"
	            android:orientation="horizontal"
	            android:layout_marginLeft="10dip" >
		         <ImageView
		             android:id="@+id/back_button"
		             android:layout_width="wrap_content"
		             android:layout_height="wrap_content"
		             android:background="@drawable/back_disable"
		             android:layout_gravity="center_vertical"
		             android:contentDescription="@null" />
		         <TextView
		             android:layout_width="wrap_content"
		             android:layout_height="wrap_content"
		             android:layout_gravity="center_vertical"
		             android:gravity="center"
		             android:text="@string/back"
		             android:singleLine="true"
		             android:layout_marginLeft="5dip"
		             android:textColor="@color/color_disable_grey"
		             android:textSize="18sp" />
	        </LinearLayout>

            <LinearLayout
                android:id="@+id/edit_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="right" >

                <TextView
                    android:id="@+id/done_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:layout_marginRight="10dip"
                    android:text="@string/done"
                    android:textColor="@drawable/common_button_text"
                    android:textSize="16sp"
                    android:visibility="visible" />
            </LinearLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:layout_toLeftOf="@id/edit_layout"
                android:layout_toRightOf="@id/back_layout"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/storage_main_local_storage"
                android:textColor="@color/color_white"
                android:textSize="@dimen/dimen_textsize_18sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/directory_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_layout"
        android:background="@color/color_white"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/root_directory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:contentDescription="@null"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:src="@drawable/local_storage_grey" />

        <TextView
            android:id="@+id/directory_parent"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:clickable="true"
            android:ellipsize="middle"
            android:gravity="center"
             android:maxEms="7"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:singleLine="true"
            android:textColor="@color/color_disable_grey"
            android:textSize="18sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/directory_arrow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/directory_arrow"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/directory"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:clickable="true"
            android:ellipsize="middle"
            android:gravity="center"
             android:maxEms="7"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:singleLine="true"
            android:textColor="@color/color_disable_grey"
            android:textSize="18sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/directory_arrow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/directory_arrow"
            android:contentDescription="@null"
            android:visibility="gone" />
    </LinearLayout>
    
    <View
        android:id="@+id/layout_top_divider"
    	android:layout_below="@id/directory_layout"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="10dip"
        android:background="@color/color_divider" />

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/main_tabbar_background"
        android:orientation="horizontal"
        android:paddingLeft="5dip"
        android:paddingRight="5dip" >

        <TextView
            android:id="@+id/download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableTop="@drawable/storage_selector_download_button"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/toolbar_download"
            android:textColor="@color/color_grey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/move"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableTop="@drawable/storage_selector_move_button"
            android:gravity="center"
            android:text="@string/toolbar_move"
            android:textSize="12sp"
            android:textColor="@color/color_grey" />

        <TextView
            android:id="@+id/rename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableTop="@drawable/storage_selector_rename_button"
            android:gravity="center"
            android:text="@string/toolbar_rename"
            android:textSize="12sp"
            android:textColor="@color/color_grey" />
        <TextView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableTop="@drawable/storage_selector_delete_button"
            android:gravity="center"
            android:text="@string/toolbar_delete"
            android:textSize="12sp"
            android:textColor="@color/color_grey" />
        <CheckBox
            android:id="@+id/select_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:button="@null"
            android:background="@android:color/transparent" 
            android:checked="false"
            android:drawableTop="@drawable/selector_toolbar_checkbox"
            android:gravity="center"
            android:text="@string/toolbar_select_all"
            android:textSize="12sp"
            android:textColor="@color/color_grey" />
    </LinearLayout>

    <View
       	android:id="@+id/layout_bottom_divider"
       	android:layout_above="@id/bottom_layout"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/color_divider" />
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_layout"
        android:layout_below="@id/directory_layout" >

        <ListView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            android:choiceMode="singleChoice"
            android:divider="@color/color_divider"
            android:dividerHeight="0dip"
            android:drawSelectorOnTop="false"
            android:listSelector="@drawable/selector_local_storage_item"
            android:overScrollMode="never" />

        <ProgressBar
            android:id="@+id/waiting_progress"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_gravity="center_vertical|center_horizontal"
            android:indeterminateDrawable="@drawable/progerss_blue"
            android:visibility="gone" />
    </FrameLayout>

</RelativeLayout>