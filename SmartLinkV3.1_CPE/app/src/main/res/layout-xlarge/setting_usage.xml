<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:paddingBottom="12dip"
            android:paddingTop="18dip" >
        	<TextView
                android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerVertical="true"
		        android:text="@string/usage_setting_usage"
		        android:textSize="27sp"
		        android:textColor="@color/grey_text"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="@color/grey_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:paddingBottom="9dip"
            android:paddingTop="9dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/usage_setting_billingday"
                android:textSize="24sp"
                android:textColor="@color/black_text" />

            <TextView
                android:id="@+id/billing_plan_unit"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/usage_setting_dayunit"
                android:textSize="24sp"
                android:textColor="@color/deep_grey_text" />

            <EditText
                android:id="@+id/billing_plan_value"
                android:layout_width="98dip"
                android:layout_height="45dip"
                android:layout_marginRight="2dip"
                android:layout_toLeftOf="@+id/billing_plan_unit"
                android:background="@drawable/selector_edit_bg"
                android:inputType="number"
                android:imeOptions="actionDone|flagNoExtractUi"
                android:width="98dip"
                android:textColor="@color/deep_grey_text"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:background="@color/color_divider"
            android:layout_marginLeft="@dimen/dimen_15dip"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:paddingBottom="9dip"
            android:paddingTop="9dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/usage_setting_monthlysataplan"
                android:textSize="24sp"
                android:textColor="@color/black_text" />

            <TextView
                android:id="@+id/monthly_plan_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/unit_selector"
                android:layout_centerVertical="true"
                android:text="@string/m_unit"
                android:textSize="24sp"
                android:textColor="@color/deep_grey_text" />

            <Button
                android:id="@+id/unit_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_5dip"
                android:layout_alignBottom="@+id/monthly_plan_value"
                android:layout_alignParentRight="true"
                android:background="@drawable/general_ic_next"
                android:spinnerMode="dialog"/>

            <EditText
                android:id="@+id/monthly_plan_value"
                android:layout_width="98dip"
                android:layout_height="45dip"
                android:layout_marginRight="2dip"
                android:layout_toLeftOf="@+id/monthly_plan_unit"
                android:background="@drawable/selector_edit_bg"
                android:inputType="number"
                android:imeOptions="actionDone|flagNoExtractUi"
                android:width="98dip"
                android:textColor="@color/deep_grey_text"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:background="@color/color_divider"
            android:layout_marginLeft="@dimen/dimen_15dip"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:paddingTop="9dip"
            android:paddingBottom="18dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/usage_setting_dataconsunption"
                android:textSize="24sp"
                android:textColor="@color/deep_grey_text" />

            <TextView
                android:id="@+id/consumption_value_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textSize="24sp"
                android:textColor="@color/deep_grey_text"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:background="@color/grey_line"
            android:layout_marginLeft="@dimen/dimen_15dip"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:paddingBottom="9dip"
            android:paddingTop="9dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/usage_setting_usagealert"
                android:textSize="24sp"
                android:textColor="@color/black_text" />

            <TextView
                android:id="@+id/usage_alert_unit"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/usage_setting_usagealertunit"
                android:textSize="24sp"
                android:textColor="@color/deep_grey_text" />

            <EditText
                android:id="@+id/usage_alert_value"
                android:layout_width="98dip"
                android:layout_height="45dip"
                android:layout_marginRight="2dip"
                android:layout_toLeftOf="@+id/usage_alert_unit"
                android:background="@drawable/selector_edit_bg"
                android:inputType="number"
                android:imeOptions="actionDone|flagNoExtractUi"
                android:width="98dip"
                android:textColor="@color/deep_grey_text"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:background="@color/grey_line"
            android:layout_marginLeft="@dimen/dimen_15dip"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:paddingTop="9dip"
            android:paddingBottom="18dip" >
            <Button
                android:id="@+id/enable_auto_disconnected_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/general_btn_off"
                android:clickable="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/enable_auto_disconnected_btn"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:text="@string/usage_setting_autodisconnected"
                android:textSize="27sp"
                android:textColor="@color/black_text"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="@color/grey_line" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dip"
        android:layout_marginLeft="15dip"
        android:paddingBottom="18dip"
        android:text="@string/disconnected_descrition"
        android:textSize="24sp"
        android:textColor="@color/color_grey"/>

</LinearLayout>
