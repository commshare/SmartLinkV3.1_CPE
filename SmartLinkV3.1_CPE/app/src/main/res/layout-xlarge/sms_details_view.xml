<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@color/color_white" >

	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">

		<RelativeLayout
			android:id="@+id/ID_SMS_DETAIL_TOP_LAYOUT"
			android:background="@color/color_blue"
			android:layout_width="fill_parent"
			android:layout_height="@dimen/dimen_80dip">

			<LinearLayout android:id="@+id/back_layout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:clickable="true"
				android:layout_alignParentLeft="true"
				android:layout_centerVertical="true"
				android:orientation="horizontal"
				android:layout_marginLeft="@dimen/dimen_20dip" >

				<ImageView
					android:id="@+id/back_button"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@drawable/back"
					android:layout_gravity="center_vertical"
					android:contentDescription="@null" />
			</LinearLayout>

			<LinearLayout
				android:id="@+id/ID_SMS_DETAIL_BUTTON_DELETE_LAYOUT"
				android:layout_width="@dimen/dimen_140dip"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true" >

				<Button
					android:id="@+id/delete_button"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:focusable="true"
					android:focusableInTouchMode="true"
					android:layout_gravity="center"
					android:layout_marginLeft="@dimen/dimen_20dip"
					android:background="@drawable/btn_delete" />
			</LinearLayout>

			<TextView
				android:id="@+id/ID_SMS_DETAIL_TITLE"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginLeft="@dimen/dimen_16dip"
				android:layout_marginRight="@dimen/dimen_16dip"
				android:layout_toLeftOf="@id/ID_SMS_DETAIL_BUTTON_DELETE_LAYOUT"
				android:layout_toRightOf="@id/back_layout"
				android:gravity="center"
				android:text="10086"
				android:singleLine="true"
				android:textColor="@color/color_white"
				android:textSize="@dimen/dimen_textsize_36sp"
				android:textStyle="bold" />
		</RelativeLayout>

		<LinearLayout
			android:id="@+id/ID_SMS_DETAIL_REPLY_LAYOUT"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:orientation="vertical"
			android:background="@color/color_white">

			<View android:layout_width="fill_parent"
				android:layout_height="@dimen/dimen_2dip"
				android:background="@color/grey_line"/>

			<RelativeLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/dimen_10dip"
				android:layout_marginBottom="@dimen/dimen_10dip" >

				<Button
					android:id="@+id/ID_SMS_DETAIL_BUTTON_SEND"
					android:layout_width="wrap_content"
					android:layout_height="@dimen/dimen_70dip"
					android:focusable="true"
					android:background="@drawable/bg_conner_bottom_normal"
					android:text="Send"
					android:textColor="@color/color_white"
					android:textSize="@dimen/dimen_textsize_32sp"
					android:layout_alignParentRight="true"
					android:layout_centerVertical="true"
					android:layout_marginRight="@dimen/dimen_40dip"
					android:paddingLeft="@dimen/dimen_30dip"
					android:paddingRight="@dimen/dimen_30dip"
					android:enabled="false" />

				<EditText
					android:id="@+id/ID_SMS_DETAIL_EDIT_CONTENT"
					android:layout_width="match_parent"
					android:layout_height="@dimen/dimen_70dip"
					android:background="@color/backup_name_bg"
					android:layout_centerVertical="true"
					android:layout_marginLeft="@dimen/dimen_40dip"
					android:layout_marginRight="@dimen/dimen_20dip"
					android:layout_toLeftOf="@id/ID_SMS_DETAIL_BUTTON_SEND"
					android:inputType="none"
					android:maxLength="1600"
					android:scrollbarStyle="outsideOverlay"
					android:scrollbars="vertical"
					android:textSize="@dimen/dimen_textsize_40sp"
					android:imeOptions="flagNoExtractUi"/>
			</RelativeLayout>
		</LinearLayout>

		<ListView android:id="@+id/sms_detail_list_view"
			android:divider="@null"
			android:listSelector="@android:color/transparent"
			android:cacheColorHint="#00000000"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:transcriptMode="alwaysScroll"
			android:stackFromBottom="false"
			android:layout_above="@id/ID_SMS_DETAIL_REPLY_LAYOUT"
			android:layout_below="@id/ID_SMS_DETAIL_TOP_LAYOUT"
			android:overScrollMode="never"/>
	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/sms_waiting_layout"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<ProgressBar
			android:id="@+id/sms_waiting_progress"
			android:layout_width="@dimen/dimen_80dip"
			android:layout_height="@dimen/dimen_80dip"
			android:layout_centerInParent="true"
			android:indeterminateDrawable="@drawable/progerss_blue"
			android:visibility="gone" />
		<!--  android:indeterminateDrawable="@drawable/progerss_connect"-->
	</RelativeLayout>
</FrameLayout>