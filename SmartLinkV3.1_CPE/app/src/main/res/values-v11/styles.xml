<resources>

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!-- API 11 theme customizations can go here. -->
    </style>

    <style name="CustomizedWindowTitleBackground"> 
        <item name="android:background">@color/main_title_background</item>
    </style> 
    <style name="AppThemeMyTitle" parent="android:Theme">
        <item name="android:windowTitleSize">@dimen/action_bar_height</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomizedWindowTitleBackground</item> 
        <!-- All customizations that are NOT specific to a particular API-level can go here. --> 
    </style>
</resources>