<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60dip"
        android:background="@color/main_title_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/setting_set_data_plan"
            android:textColor="@color/color_white"
            android:textSize="@dimen/dimen_20dip"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_dataplan_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/skip"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_textsize_18sp" />

    </RelativeLayout>

</RelativeLayout>
