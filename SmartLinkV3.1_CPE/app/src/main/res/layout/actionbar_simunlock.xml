<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60dip"
        android:background="@color/sim_unlock">

        <ImageView
            android:id="@+id/iv_simUnlock_back"
            android:layout_width="@dimen/dimen_18dip"
            android:layout_height="@dimen/dimen_35dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/sim_unlocked"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_textsize_18sp" />

    </RelativeLayout>

</RelativeLayout>
