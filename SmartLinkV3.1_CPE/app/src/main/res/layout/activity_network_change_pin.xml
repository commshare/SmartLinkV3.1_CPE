<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone"
    android:background="@color/white"
    android:id="@+id/linear_network_change_pin">
    <ScrollView
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content">

        <LinearLayout
            android:id = "@+id/input_password"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:background = "@color/color_white"
            android:orientation = "vertical"
            android:visibility = "visible">

            <LinearLayout
                android:layout_width = "match_parent"
                android:layout_height = "match_parent"
                android:orientation = "horizontal">

                <EditText
                    android:id="@+id/current_sim_pin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_12dip"
                    android:background="@null"
                    android:hint="Current SIM PIN"
                    android:imeOptions="flagNoExtractUi"
                    android:maxLength="4"
                    android:inputType="number"
                    android:digits="1234567890"
                    android:paddingBottom="@dimen/dimen_12dip"
                    android:paddingTop="@dimen/dimen_12dip"
                    android:textColor="@color/grey_text"
                    android:textSize="@dimen/dimen_textsize_16sp" />
            </LinearLayout>

            <ImageView
                android:layout_width = "match_parent"
                android:layout_height = "@dimen/dimen_0.5dip"
                android:layout_marginLeft = "@dimen/dimen_12dip"
                android:background = "@color/main_bottom_divider"
                android:contentDescription = "@string/setting_account" />

            <LinearLayout
                android:layout_width = "match_parent"
                android:layout_height = "match_parent"
                android:orientation = "horizontal">

                <EditText
                    android:id = "@+id/new_sim_pin"
                    android:layout_width = "match_parent"
                    android:layout_height = "wrap_content"
                    android:layout_marginLeft = "@dimen/dimen_12dip"
                    android:background = "@null"
                    android:hint = "New SIM PIN"
                    android:imeOptions = "flagNoExtractUi"
                    android:maxLength="4"
                    android:inputType="number"
                    android:digits="1234567890"
                    android:paddingBottom = "15dp"
                    android:paddingTop = "@dimen/dimen_15dip"
                    android:textColor = "@color/grey_text"
                    android:textSize = "@dimen/dimen_textsize_16sp"
                    />
            </LinearLayout>

            <ImageView
                android:layout_width = "match_parent"
                android:layout_height = "@dimen/dimen_0.5dip"
                android:layout_marginLeft = "@dimen/dimen_12dip"
                android:background = "@color/main_bottom_divider"
                android:contentDescription = "@string/setting_account" />

            <LinearLayout
                android:layout_width = "match_parent"
                android:layout_height = "match_parent"
                android:orientation = "horizontal">

                <EditText
                    android:id = "@+id/confirm_new_sim_pin"
                    android:layout_width = "match_parent"
                    android:layout_height = "wrap_content"
                    android:layout_marginLeft = "@dimen/dimen_12dip"
                    android:layout_weight = "1"
                    android:background = "@null"
                    android:hint = "Confirm New SIM PIN"
                    android:imeOptions = "flagNoExtractUi"
                    android:maxLength="4"
                    android:inputType="number"
                    android:digits="1234567890"
                    android:paddingBottom = "@dimen/dimen_15dip"
                    android:paddingTop = "@dimen/dimen_15dip"
                    android:textColor = "@color/grey_text"
                    android:textSize = "@dimen/dimen_textsize_16sp"
                    />
            </LinearLayout>

            <ImageView
                android:layout_width = "match_parent"
                android:layout_height = "@dimen/dimen_0.5dip"
                android:background = "@color/main_bottom_divider"
                android:contentDescription = "@string/setting_account" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/remember_sim_pin"
                android:layout_marginTop="4dp"
                android:text="Remember SIM PIN"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>