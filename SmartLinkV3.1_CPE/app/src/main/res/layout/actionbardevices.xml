<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60dip"
        android:background="@color/main_title_background">

        <ImageButton  android:layout_alignParentStart="true"
                      android:layout_alignParentLeft="true"
            android:id="@+id/device_back"
            android:layout_width="@dimen/dimen_35dip"
            android:layout_height="@dimen/dimen_35dip"
            android:layout_centerVertical="true"
            android:background="@null"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/device_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/device_manage_title"
            android:textColor="@color/color_white"
            android:textSize="@dimen/dimen_20dip"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/device_block"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="@string/Blocked"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_textsize_18sp" />

    </RelativeLayout>

</RelativeLayout>
