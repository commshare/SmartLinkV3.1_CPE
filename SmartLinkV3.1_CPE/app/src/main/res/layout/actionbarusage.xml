<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/usage_layout_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60dip"
        android:background="@color/main_title_background">

        <ImageButton
            android:layout_marginLeft="@dimen/dimen_10dip"
            android:id="@+id/usage_back"
            android:layout_width="@dimen/dimen_18dip"
            android:layout_height="@dimen/dimen_35dip"
            android:layout_centerVertical="true"
            android:background="@null"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/usage_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/usage_setting_usage"
            android:textColor="@color/color_white"
            android:textSize="@dimen/dimen_20dip"
            android:textStyle="normal" />

        <Button
            android:layout_marginRight="@dimen/dimen_10dip"
            android:id="@+id/usage_more"
            android:layout_width="@dimen/dimen_40dip"
            android:layout_height="@dimen/dimen_40dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/actionbar_more_icon" />
    </RelativeLayout>

</RelativeLayout>
