<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/home_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="12dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="12dip">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/home_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@null"
                        android:src="@drawable/home_connected_ic_home" />

                    <LinearLayout
                        android:id="@+id/home_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_10dip"
                        android:layout_toRightOf="@id/home_icon"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/home_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/usage_view_home"
                            android:textColor="@color/black_text"
                            android:textSize="@dimen/dimen_textsize_18sp" />

                        <TextView
                            android:id="@+id/home_data"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/deep_grey_text"
                            android:textSize="@dimen/dimen_textsize_14sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/home_warn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:background="@drawable/usage_warning"
                        android:contentDescription="@null"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/home_data_up"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/home_connected_ic_usage_on"
                            android:contentDescription="@null"
                            android:visibility="visible" />

                        <ImageView
                            android:id="@+id/home_data_down"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_10dip"
                            android:background="@drawable/home_connected_ic_usage_off"
                            android:contentDescription="@null"
                            android:visibility="visible" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/home_data_up_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="end"
                            android:maxLines="1"
                            android:paddingLeft="10dip"
                            android:textColor="@color/deep_black_text"
                            android:textSize="@dimen/dimen_textsize_18sp" />

                        <TextView
                            android:id="@+id/home_data_down_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="12dp"
                            android:layout_marginTop="@dimen/dimen_10dip"
                            android:ellipsize="end"
                            android:gravity="end"
                            android:maxLines="1"
                            android:paddingLeft="10dip"
                            android:textColor="@color/deep_black_text"
                            android:textSize="@dimen/dimen_textsize_18sp" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <FrameLayout
                android:id="@+id/usage_home_progress_panel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="12dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip">

                <ProgressBar
                    android:id="@+id/usage_status_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="200dip"
                    android:layout_height="10dip"
                    android:max="100"
                    android:progress="70"
                    android:progressDrawable="@drawable/progress_bar_drawable" />

                <TextView
                    android:id="@+id/usage_status_describtion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/usage_status_des"
                    android:textColor="@color/color_black"
                    android:textSize="12sp"
                    android:visibility="gone" />
            </FrameLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/grey_line"
            android:paddingBottom="6dip"
            android:paddingTop="6dip" />

        <RelativeLayout
            android:id="@+id/roaming_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="12dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="12dip">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/roaming_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:src="@drawable/home_connected_ic_roaming" />

                <LinearLayout
                    android:id="@+id/roaming_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10dip"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/roaming_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/usage_setting_roaming"
                        android:textColor="@color/black_text"
                        android:textSize="@dimen/dimen_textsize_18sp" />

                    <TextView
                        android:id="@+id/roaming_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30MB"
                        android:textColor="@color/deep_grey_text"
                        android:textSize="@dimen/dimen_textsize_14sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/roaming_warn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:background="@drawable/usage_warning"
                    android:contentDescription="@null"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/roaming_data_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/home_connected_ic_usage_on"
                        android:contentDescription="@null"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/roaming_data_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_10dip"
                        android:background="@drawable/home_connected_ic_usage_off"
                        android:contentDescription="@null"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/roaming_data_up_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:paddingLeft="10dip"
                        android:singleLine="true"
                        android:textColor="@color/deep_black_text"
                        android:textSize="@dimen/dimen_textsize_18sp" />

                    <TextView
                        android:id="@+id/roaming_data_down_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="@dimen/dimen_10dip"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:maxLines="1"
                        android:paddingLeft="10dip"
                        android:textColor="@color/deep_black_text"
                        android:textSize="@dimen/dimen_textsize_18sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/grey_line" />

        <RelativeLayout
            android:id="@+id/duration_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="12dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="12dip">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/duration_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:src="@drawable/home_connected_ic_clock" />

                <LinearLayout
                    android:id="@+id/duration_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10dip"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/duration_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/usage_view_duration"
                        android:textColor="@color/black_text"
                        android:textSize="@dimen/dimen_textsize_18sp" />

                    <TextView
                        android:id="@+id/duration_time_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/deep_grey_text"
                        android:textSize="@dimen/dimen_textsize_14sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/duration_warn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:background="@drawable/usage_warning"
                    android:contentDescription="@null"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/duration_total_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_12dip"
                android:ellipsize="end"
                android:gravity="end"
                android:paddingRight="@dimen/dimen_10dip"
                android:singleLine="true"
                android:textSize="@dimen/dimen_textsize_18sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
