<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/et_underline_settimelimit">

    <TextView
        android:id="@+id/tv_pop_setting_rx_upgrade_noNewVersion_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="V0.1.2.4"
        android:textColor="@color/black"
        app:layout_marginTopPercent="3%sh"
        app:layout_textSizePercent="3%sh" />

    <TextView
        android:id="@+id/tv_pop_setting_rx_upgrade_noNewVersion_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_pop_setting_rx_upgrade_noNewVersion_version"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/your_firmware_is_up_to_date"
        app:layout_marginTopPercent="2%sh"
        app:layout_textSizePercent="2.7%sh" />

    <TextView
        android:id="@+id/tv_pop_setting_rx_upgrade_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_pop_setting_rx_upgrade_noNewVersion_tip"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/ok"
        android:textColor="@color/mg_blue"
        app:layout_heightPercent="5%sh"
        app:layout_marginTopPercent="3%sh"
        app:layout_widthPercent="50%sw" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_1dip"
        android:layout_below="@id/tv_pop_setting_rx_upgrade_ok"
        app:layout_marginTopPercent="3%sh" />

</com.zhy.android.percent.support.PercentRelativeLayout>
