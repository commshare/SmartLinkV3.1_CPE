<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_pop_conner">

    <!-- titile -->
    <TextView
        android:id="@+id/tv_smsdetail_tryagain_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/smsdetail_tryagain"
        android:textColor="@color/mg_blue"
        app:layout_marginTopPercent="4%sh"
        app:layout_textSizePercent="2.7%sh" />

    <!-- split -->
    <View
        android:id="@+id/v_smsdetail_tryagain_split"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dip"
        android:layout_below="@id/tv_smsdetail_tryagain_title"
        android:layout_marginEnd="@dimen/dimen_15dip"
        android:layout_marginStart="@dimen/dimen_15dip"
        android:alpha="0.5"
        android:background="@color/gray"
        app:layout_marginTopPercent="3%sh" />

    <!-- buttons -->
    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/ll_smsdetail_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/v_smsdetail_tryagain_split"
        android:orientation="horizontal"
        app:layout_heightPercent="8%sh"
        app:layout_marginTopPercent="2%sh">

        <com.alcatel.wifilink.appwidget.RippleView
            android:id="@+id/tv_smsdetail_tryagain_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/gray"
            app:alphaFactor="0.2"
            app:hover="true"
            app:layout_textSizePercent="32%h"
            app:rippleColor="@color/mg_blue" />

        <com.alcatel.wifilink.appwidget.RippleView
            android:id="@+id/tv_smsdetail_tryagain_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/smsdetail_tryagain_confirm"
            android:textColor="@color/sms_detail_tryagain"
            app:alphaFactor="0.2"
            app:hover="true"
            app:layout_textSizePercent="32%h"
            app:rippleColor="@color/mg_blue" />
    </com.zhy.android.percent.support.PercentLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dip"
        android:layout_below="@id/ll_smsdetail_buttons"
        app:layout_marginTopPercent="2%sh" />

</com.zhy.android.percent.support.PercentRelativeLayout>
