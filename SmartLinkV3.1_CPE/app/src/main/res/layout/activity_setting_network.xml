<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/setting_background_color"
    android:id="@+id/setting_network_content">
    
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:id="@+id/waiting_progressbar"
            android:background="@null" >
            <ProgressBar
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_centerInParent="true"
                android:indeterminateDrawable="@drawable/progerss_blue"
                android:visibility="visible" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/setting_network_mode_container"
        android:background="@color/setting_background_color"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioGroup
            android:id="@+id/setting_network_mode"
            android:layout_marginTop="@dimen/setting_padding_10_dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:background="@color/color_white">

            <RadioButton
                android:id="@+id/mode_auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/setting_padding_10_dp"
                android:layout_marginRight="@dimen/setting_padding_10_dp"
                android:textSize="@dimen/setting_name_size_s"
                android:button="@null"
                android:checked="true"
                android:drawableRight="@drawable/radiobutton"
                android:enabled="true"
                android:paddingBottom="15dip"
                android:paddingTop="15dip"
                android:text="@string/setting_network_mode_auto"
                android:textColor="@color/color_black" />

            <View
                android:layout_marginLeft="@dimen/setting_padding_10_dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0.5dip"
                android:background="@color/main_bottom_divider" />

            <RadioButton
                android:id="@+id/mode_lte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/setting_padding_10_dp"
                android:layout_marginRight="@dimen/setting_padding_10_dp"
                android:textSize="@dimen/setting_name_size_s"
                android:button="@null"
                android:checked="false"
                android:drawableRight="@drawable/radiobutton"
                android:enabled="true"
                android:paddingBottom="15dip"
                android:paddingTop="15dip"
                android:text="@string/setting_network_mode_LTE_only"
                android:textColor="@color/color_black" />

            <View
                android:layout_marginLeft="@dimen/setting_padding_10_dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0.5dip"
                android:background="@color/main_bottom_divider" />

            <RadioButton
                android:id="@+id/mode_3g"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/setting_padding_10_dp"
                android:layout_marginRight="@dimen/setting_padding_10_dp"
                android:textSize="@dimen/setting_name_size_s"
                android:button="@null"
                android:checked="false"
                android:drawableRight="@drawable/radiobutton"
                android:enabled="true"
                android:paddingBottom="15dip"
                android:paddingTop="15dip"
                android:text="@string/setting_network_mode_3G_only"
                android:textColor="@color/color_black" />

            <View
                android:layout_marginLeft="@dimen/setting_padding_10_dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0.5dip"
                android:background="@color/main_bottom_divider" />

            <RadioButton
                android:id="@+id/mode_2g"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/setting_padding_10_dp"
                android:layout_marginRight="@dimen/setting_padding_10_dp"
                android:textSize="@dimen/setting_name_size_s"
                android:button="@null"
                android:checked="false"
                android:drawableRight="@drawable/radiobutton"
                android:enabled="true"
                android:paddingBottom="15dip"
                android:paddingTop="15dip"
                android:text="@string/setting_network_mode_2G_only"
                android:textColor="@color/color_black" />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/level_one_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5dip"
            android:background="@color/main_bottom_divider"
            android:contentDescription="@string/setting_network" />


        <RelativeLayout
            android:id="@+id/network_mobile_data_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/color_white"
                android:padding="@dimen/setting_padding_10_dp"
                android:text="@string/usage_setting_mobile_data"
                android:textColor="@color/color_black"
                android:textSize="@dimen/setting_name_size_s" />

            <TextView
                android:id="@+id/network_mobile_data_switch"
                android:layout_width="@dimen/dimen_50dip"
                android:layout_height="@dimen/dimen_30dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/general_btn_off"
                android:clickable="true" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5dip"
            android:layout_marginTop="@dimen/dimen_1dip"
            android:background="@color/main_bottom_divider"
            android:contentDescription="@string/setting_network" />

        <RelativeLayout
            android:id="@+id/network_connect_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:padding="@dimen/setting_padding_10_dp"
                android:text="@string/setting_network_connect_mode"
                android:textColor="@color/color_black"
                android:textSize="@dimen/setting_name_size_s" />

            <ImageView
                android:id="@+id/network_connect_mode_arrow"
                android:layout_width="@dimen/dimen_20dip"
                android:layout_height="@dimen/dimen_20dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_10dip"
                android:src="@drawable/right_arrow_big" />

            <TextView
                android:id="@+id/network_connect_mode_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="end"
                android:layout_toLeftOf="@id/network_connect_mode_arrow"
                android:padding="@dimen/setting_padding_10_dp"
                android:textColor="@color/color_light_gray"
                android:textSize="@dimen/setting_padding_10_dp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5dip"
            android:layout_marginTop="@dimen/dimen_1dip"
            android:background="@color/main_bottom_divider"
            android:contentDescription="@string/setting_network" />

        <RelativeLayout
            android:id="@+id/network_set_data_plan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:padding="@dimen/setting_padding_10_dp"
                android:text="@string/setting_set_data_plan"
                android:textColor="@color/color_black"
                android:textSize="@dimen/setting_name_size_s" />

            <ImageView
                android:id="@+id/network_set_data_plan_arrow"
                android:layout_width="@dimen/dimen_20dip"
                android:layout_height="@dimen/dimen_20dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_10dip"
                android:src="@drawable/right_arrow_big" />

            <TextView
                android:id="@+id/network_set_data_plan_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="end"
                android:layout_toLeftOf="@id/network_set_data_plan_arrow"
                android:padding="@dimen/setting_padding_10_dp"
                android:textColor="@color/color_light_gray"
                android:textSize="@dimen/setting_padding_10_dp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5dip"
            android:layout_marginTop="@dimen/dimen_1dip"
            android:background="@color/main_bottom_divider"
            android:contentDescription="@string/setting_network" />

        <RelativeLayout
            android:id="@+id/network_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:padding="@dimen/setting_padding_10_dp"
                android:text="@string/setting_network_mode"
                android:textColor="@color/color_black"
                android:textSize="@dimen/setting_name_size_s" />

            <ImageView
                android:id="@+id/network_mode_arrow"
                android:layout_width="@dimen/dimen_20dip"
                android:layout_height="@dimen/dimen_20dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_10dip"
                android:src="@drawable/right_arrow_big" />

            <TextView
                android:id="@+id/network_mode_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="end"
                android:layout_toLeftOf="@id/network_mode_arrow"
                android:padding="@dimen/setting_padding_10_dp"
                android:textColor="@color/color_light_gray"
                android:textSize="@dimen/setting_padding_10_dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0.5dip"
                android:layout_marginLeft="@dimen/setting_padding_10_dp"
                android:background="@color/main_bottom_divider"
                android:contentDescription="@string/setting_network" />
        </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5dip"
            android:layout_marginTop="@dimen/dimen_1dip"
            android:background="@color/main_bottom_divider"
            android:contentDescription="@string/setting_network" />

        <RelativeLayout
            android:id="@+id/network_profile_management"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:padding="@dimen/setting_padding_10_dp"
                android:text="@string/setting_network_profile_management"
                android:textColor="@color/color_black"
                android:textSize="@dimen/setting_name_size_s" />

            <ImageView
                android:id="@+id/network_selected_profile_arrow"
                android:layout_width="@dimen/dimen_20dip"
                android:layout_height="@dimen/dimen_20dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_10dip"
                android:src="@drawable/right_arrow_big" />

            <TextView
                android:id="@+id/network_selected_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="end"
                android:layout_toLeftOf="@id/network_selected_profile_arrow"
                android:maxWidth="250dp"
                android:padding="@dimen/setting_padding_10_dp"
                android:singleLine="true"
                android:textColor="@color/color_light_gray"
                android:textSize="@dimen/setting_padding_10_dp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5dip"
            android:background="@color/main_bottom_divider"
            android:contentDescription="@string/setting_network" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5dip"
            android:layout_marginTop="@dimen/dimen_1dip"
            android:background="@color/main_bottom_divider"
            android:contentDescription="@string/setting_network" />

        <RelativeLayout
            android:id="@+id/network_roaming_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:padding="@dimen/setting_padding_10_dp"
                android:text="@string/usage_setting_roaming"
                android:textColor="@color/color_black"
                android:textSize="@dimen/setting_name_size_s" />

            <TextView
                android:id="@+id/network_roaming_switch"
                android:layout_width="@dimen/dimen_50dip"
                android:layout_height="@dimen/dimen_30dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/dimen_10dip"
                android:background="@drawable/general_btn_off"
                android:clickable="true" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5dip"
            android:background="@color/main_bottom_divider"
            android:contentDescription="@string/setting_network" />

        <RelativeLayout
            android:id="@+id/network_sim_pin_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/color_white"
                android:padding="@dimen/setting_padding_10_dp"
                android:text="@string/usage_setting_sim_pin"
                android:textColor="@color/color_black"
                android:textSize="@dimen/setting_name_size_s" />

            <TextView
                android:id="@+id/network_sim_pin_switch"
                android:layout_width="@dimen/dimen_50dip"
                android:layout_height="@dimen/dimen_30dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/dimen_10dip"
                android:background="@drawable/general_btn_off"
                android:clickable="true" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5dip"
            android:background="@color/main_bottom_divider"
            android:contentDescription="@string/setting_network" />

        <RelativeLayout
            android:id="@+id/network_change_pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:padding="@dimen/setting_padding_10_dp"
                android:text="@string/setting_change_pin"
                android:textColor="@color/color_black"
                android:textSize="@dimen/setting_name_size_s" />

            <ImageView
                android:id="@+id/network_change_pin_arrow"
                android:layout_width="@dimen/dimen_20dip"
                android:layout_height="@dimen/dimen_20dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_10dip"
                android:src="@drawable/right_arrow_big" />

            <TextView
                android:id="@+id/network_change_pin_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="end"
                android:layout_toLeftOf="@id/network_change_pin_arrow"
                android:padding="@dimen/setting_padding_10_dp"
                android:textColor="@color/color_light_gray"
                android:textSize="@dimen/setting_padding_10_dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/network_sim_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:padding="@dimen/setting_padding_10_dp"
                android:text="@string/setting_sim_number"
                android:textColor="@color/color_black"
                android:textSize="@dimen/setting_name_size_s" />

            <ImageView
                android:id="@+id/network_sim_number_arrow"
                android:layout_width="@dimen/dimen_20dip"
                android:layout_height="@dimen/dimen_20dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_10dip"
                android:src="@drawable/right_arrow_big" />

            <TextView
                android:id="@+id/network_sim_number_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="end"
                android:layout_toLeftOf="@id/network_sim_number_arrow"
                android:padding="@dimen/setting_padding_10_dp"
                android:textColor="@color/color_light_gray"
                android:textSize="@dimen/setting_padding_10_dp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5dip"
            android:layout_marginTop="@dimen/dimen_1dip"
            android:background="@color/main_bottom_divider"
            android:contentDescription="@string/setting_network" />

        <RelativeLayout
            android:id="@+id/network_imsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:padding="@dimen/setting_padding_10_dp"
                android:text="@string/setting_imsi"
                android:textColor="@color/color_black"
                android:textSize="@dimen/setting_name_size_s" />

            <ImageView
                android:id="@+id/network_imsi_arrow"
                android:layout_width="@dimen/dimen_20dip"
                android:layout_height="@dimen/dimen_20dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_10dip"
                android:src="@drawable/right_arrow_big" />

            <TextView
                android:id="@+id/network_imsi_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="end"
                android:layout_toLeftOf="@id/network_imsi_arrow"
                android:padding="@dimen/setting_padding_10_dp"
                android:textColor="@color/color_light_gray"
                android:textSize="@dimen/setting_padding_10_dp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5dip"
            android:layout_marginTop="@dimen/dimen_1dip"
            android:background="@color/main_bottom_divider"
            android:contentDescription="@string/setting_network" />

        <RelativeLayout
            android:id="@+id/network_selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/setting_padding_10_dp"
                android:text="@string/setting_network_selection"
                android:textColor="@color/color_black"
                android:textSize="@dimen/setting_name_size_s" />

            <ImageView
                android:id="@+id/network_selection_arrow"
                android:layout_width="@dimen/dimen_20dip"
                android:layout_height="@dimen/dimen_20dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_10dip"
                android:src="@drawable/right_arrow_big" />

            <TextView
                android:id="@+id/network_selection_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="end"
                android:layout_toLeftOf="@id/network_selection_arrow"
                android:padding="@dimen/setting_padding_10_dp"
                android:textColor="@color/color_light_gray"
                android:textSize="@dimen/setting_padding_10_dp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5dip"
            android:background="@color/main_bottom_divider"
            android:contentDescription="@string/setting_network" />

    </LinearLayout>

</FrameLayout>