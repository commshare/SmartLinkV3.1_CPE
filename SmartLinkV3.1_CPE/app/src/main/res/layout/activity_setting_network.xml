<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_normal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_mobile_network"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <TextView
                        style="@style/WlanSettingTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/color_white"
                        android:gravity="center_vertical"
                        android:padding="@dimen/setting_padding_10_dp"
                        android:text="@string/usage_setting_mobile_data"
                        android:textDirection="locale" />

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/network_mobile_data_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_0.5dip"
                        android:layout_alignParentBottom="true"
                        android:background="@color/grey_line"
                        android:textDirection="locale" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <TextView
                        style="@style/WlanSettingTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/color_white"
                        android:gravity="center_vertical"
                        android:padding="@dimen/setting_padding_10_dp"
                        android:text="@string/setting_network_connect_mode"
                        android:textDirection="locale" />

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/spinner_connection_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:entries="@array/settings_connection_mode"
                        android:spinnerMode="dialog"
                        android:textDirection="locale" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_0.5dip"
                        android:layout_alignParentBottom="true"
                        android:background="@color/grey_line"
                        android:textDirection="locale" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativelayout_network_roaming"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <TextView
                        style="@style/WlanSettingTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/color_white"
                        android:gravity="center_vertical"
                        android:padding="@dimen/setting_padding_10_dp"
                        android:text="@string/usage_setting_roaming"
                        android:textDirection="locale" />

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/network_roaming_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textDirection="locale"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_0.5dip"
                        android:layout_alignParentBottom="true"
                        android:background="@color/grey_line"
                        android:textDirection="locale" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/network_set_data_plan"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <TextView
                        style="@style/WlanSettingTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/color_white"
                        android:gravity="center_vertical"
                        android:padding="@dimen/setting_padding_10_dp"
                        android:text="@string/setting_set_data_plan"
                        android:textDirection="locale" />

                    <ImageView
                        android:id="@+id/network_set_data_plan_arrow"
                        android:layout_width="@dimen/dimen_20dip"
                        android:layout_height="@dimen/dimen_20dip"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dimen_10dip"
                        android:layout_marginEnd="@dimen/dimen_10dip"
                        android:src="@drawable/right_arrow_big"
                        android:textDirection="locale" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/network_set_data_plan_arrow"
                        android:layout_toStartOf="@id/network_set_data_plan_arrow"
                        android:textColor="@color/color_light_gray"
                        android:textDirection="locale"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        style="@style/WlanSettingTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/color_white"
                        android:gravity="center_vertical"
                        android:padding="@dimen/setting_padding_10_dp"
                        android:text="@string/setting_network_mode"
                        android:textDirection="locale" />

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/settings_network_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:entries="@array/settings_network_mode"
                        android:spinnerMode="dialog"
                        android:textDirection="locale" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_0.5dip"
                        android:layout_alignParentBottom="true"
                        android:background="@color/grey_line"
                        android:textDirection="locale" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativelayout_network_profile"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <TextView
                        style="@style/WlanSettingTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/color_white"
                        android:gravity="center_vertical"
                        android:padding="@dimen/setting_padding_10_dp"
                        android:text="@string/profile"
                        android:textDirection="locale" />

                    <ImageView
                        android:id="@+id/network_selected_profile_arrow"
                        android:layout_width="@dimen/dimen_20dip"
                        android:layout_height="@dimen/dimen_20dip"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dimen_10dip"
                        android:layout_marginEnd="@dimen/dimen_10dip"
                        android:src="@drawable/right_arrow_big"
                        android:textDirection="locale" />

                    <TextView
                        android:id="@+id/textview_network_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/network_selected_profile_arrow"
                        android:layout_toStartOf="@id/network_selected_profile_arrow"
                        android:textColor="@color/color_light_gray"
                        android:textDirection="locale"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        style="@style/WlanSettingTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/color_white"
                        android:gravity="center_vertical"
                        android:padding="@dimen/setting_padding_10_dp"
                        android:text="@string/qs_hint_sim_pin"
                        android:textDirection="locale" />

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/network_sim_pin_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:textDirection="locale" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_0.5dip"
                        android:layout_alignParentBottom="true"
                        android:background="@color/grey_line"
                        android:textDirection="locale" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/network_change_pin"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <TextView
                        style="@style/WlanSettingTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/color_white"
                        android:gravity="center_vertical"
                        android:padding="@dimen/setting_padding_10_dp"
                        android:text="@string/change_pin"
                        android:textDirection="locale" />

                    <ImageView
                        android:id="@+id/network_change_pin_arrow"
                        android:layout_width="@dimen/dimen_20dip"
                        android:layout_height="@dimen/dimen_20dip"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dimen_10dip"
                        android:layout_marginEnd="@dimen/dimen_10dip"
                        android:src="@drawable/right_arrow_big"
                        android:textDirection="locale" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/network_change_pin_arrow"
                        android:layout_toStartOf="@id/network_change_pin_arrow"
                        android:textColor="@color/color_light_gray"
                        android:textDirection="locale"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        style="@style/WlanSettingTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/color_white"
                        android:gravity="center_vertical"
                        android:padding="@dimen/setting_padding_10_dp"
                        android:text="@string/setting_sim_number"
                        android:textDirection="locale" />

                    <TextView
                        android:id="@+id/textview_sim_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="end"
                        android:layout_marginRight="@dimen/dimen_10dip"
                        android:layout_marginEnd="@dimen/dimen_10dip"
                        android:textColor="@color/color_light_gray"
                        android:textDirection="locale"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_0.5dip"
                        android:layout_alignParentBottom="true"
                        android:background="@color/grey_line"
                        android:textDirection="locale" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <TextView
                        style="@style/WlanSettingTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/color_white"
                        android:gravity="center_vertical"
                        android:padding="@dimen/setting_padding_10_dp"
                        android:text="@string/setting_imsi"
                        android:textDirection="locale" />

                    <TextView
                        android:id="@+id/textview_network_imsi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dimen_10dip"
                        android:layout_marginEnd="@dimen/dimen_10dip"
                        android:textColor="@color/color_light_gray"
                        android:textDirection="locale"
                        android:textSize="12sp" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0.5dip"
                    android:layout_marginTop="@dimen/dimen_1dip"
                    android:background="@color/main_bottom_divider"
                    android:contentDescription="@string/setting_network"
                    android:textDirection="locale" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/activity_setting_data_plan" />

    <include layout="@layout/activity_network_change_pin" />
</RelativeLayout>
