<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/color_bg_normal"
    android:id="@+id/setting_network_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_mobile_network"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/network_mobile_data_container"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <TextView
                        android:background="@color/color_white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/WlanSettingTitle"
                        android:gravity="center_vertical"
                        android:padding="@dimen/setting_padding_10_dp"
                        android:text="@string/usage_setting_mobile_data"/>

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/network_mobile_data_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true" />
                    <ImageView
                        android:layout_alignParentBottom="true"
                        android:background="@color/grey_line"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_0.5dip"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_connect_mode"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <TextView
                        android:background="@color/color_white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/WlanSettingTitle"
                        android:padding="@dimen/setting_padding_10_dp"
                        android:gravity="center_vertical"
                        android:text="@string/setting_network_connect_mode"/>

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/spinner_connection_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:entries="@array/settings_connection_mode"
                        android:spinnerMode="dialog" />
                    <ImageView
                        android:layout_alignParentBottom="true"
                        android:background="@color/grey_line"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_0.5dip"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativelayout_network_roaming"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <TextView
                        android:background="@color/color_white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/WlanSettingTitle"
                        android:gravity="center_vertical"
                        android:padding="@dimen/setting_padding_10_dp"
                        android:text="@string/usage_setting_roaming"/>

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/network_roaming_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true" />
                    <ImageView
                        android:layout_alignParentBottom="true"
                        android:background="@color/grey_line"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_0.5dip"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/network_set_data_plan"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <TextView
                        android:background="@color/color_white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/WlanSettingTitle"
                        android:gravity="center_vertical"
                        android:padding="@dimen/setting_padding_10_dp"
                        android:text="@string/setting_set_data_plan" />
                    <ImageView
                        android:id="@+id/network_set_data_plan_arrow"
                        android:layout_marginRight="@dimen/dimen_10dip"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/right_arrow_big"
                        android:layout_width="@dimen/dimen_20dip"
                        android:layout_height="@dimen/dimen_20dip"/>

                    <TextView
                        android:id="@+id/network_set_data_plan_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/network_set_data_plan_arrow"
                        android:textColor="@color/color_light_gray"
                        android:textSize="12sp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/network_mode"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:background="@color/color_white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/WlanSettingTitle"
                        android:gravity="center_vertical"
                        android:padding="@dimen/setting_padding_10_dp"
                        android:text="@string/setting_network_mode"/>

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/settings_network_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:entries="@array/settings_network_mode"
                        android:spinnerMode="dialog"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true" />
                    <ImageView
                        android:layout_alignParentBottom="true"
                        android:background="@color/grey_line"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_0.5dip"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativelayout_network_profile"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <TextView
                        android:background="@color/color_white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/WlanSettingTitle"
                        android:gravity="center_vertical"
                        android:padding="@dimen/setting_padding_10_dp"
                        android:text="@string/profile"/>

                    <ImageView
                        android:id="@+id/network_selected_profile_arrow"
                        android:layout_width="@dimen/dimen_20dip"
                        android:layout_height="@dimen/dimen_20dip"
                        android:layout_marginRight="@dimen/dimen_10dip"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/right_arrow_big"/>
                    <TextView
                        android:id="@+id/textview_network_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/network_selected_profile_arrow"
                        android:textColor="@color/color_light_gray"
                        android:textSize="12sp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/network_sim_pin_container"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:background="@color/color_white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/WlanSettingTitle"
                        android:gravity="center_vertical"
                        android:padding="@dimen/setting_padding_10_dp"
                        android:text="@string/usage_setting_sim_pin"/>

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/network_sim_pin_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true" />
                    <ImageView
                        android:layout_alignParentBottom="true"
                        android:background="@color/grey_line"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_0.5dip"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/network_change_pin"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/WlanSettingTitle"
                        android:background="@color/color_white"
                        android:gravity="center_vertical"
                        android:padding="@dimen/setting_padding_10_dp"
                        android:text="@string/setting_change_pin"/>
                    <ImageView
                        android:id="@+id/network_change_pin_arrow"
                        android:layout_width="@dimen/dimen_20dip"
                        android:layout_height="@dimen/dimen_20dip"
                        android:layout_marginRight="@dimen/dimen_10dip"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/right_arrow_big"/>

                    <TextView
                        android:id="@+id/network_change_pin_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/network_change_pin_arrow"
                        android:textColor="@color/color_light_gray"
                        android:textSize="12sp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/network_sim_number"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/WlanSettingTitle"
                        android:gravity="center_vertical"
                        android:padding="@dimen/setting_padding_10_dp"
                        android:background="@color/color_white"
                        android:text="@string/setting_sim_number"/>
                    <ImageView
                        android:id="@+id/network_sim_number_arrow"
                        android:layout_width="@dimen/dimen_20dip"
                        android:layout_height="@dimen/dimen_20dip"
                        android:layout_marginRight="@dimen/dimen_10dip"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/right_arrow_big"/>

                    <TextView
                        android:id="@+id/textview_sim_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/network_sim_number_arrow"
                        android:textColor="@color/color_light_gray"
                        android:textSize="12sp"
                        android:layout_gravity="end"/>
                    <ImageView
                        android:layout_alignParentBottom="true"
                        android:background="@color/grey_line"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_0.5dip"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/network_imsi"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/WlanSettingTitle"
                        android:gravity="center_vertical"
                        android:padding="@dimen/setting_padding_10_dp"
                        android:background="@color/color_white"
                        android:text="@string/setting_imsi"/>
                    <ImageView
                        android:id="@+id/network_imsi_arrow"
                        android:layout_width="@dimen/dimen_20dip"
                        android:layout_height="@dimen/dimen_20dip"
                        android:layout_marginRight="@dimen/dimen_10dip"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/right_arrow_big"/>

                    <TextView
                        android:id="@+id/textview_network_imsi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/network_imsi_arrow"
                        android:textColor="@color/color_light_gray"
                        android:textSize="12sp"/>
                </RelativeLayout>

                <ImageView
                    android:layout_marginTop="@dimen/dimen_1dip"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0.5dip"
                    android:background="@color/main_bottom_divider"
                    android:contentDescription="@string/setting_network" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <include layout="@layout/activity_setting_data_plan"/>
    <include layout="@layout/activity_network_change_pin"/>
</RelativeLayout>