<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_normal">
    <RelativeLayout
        android:id="@+id/night_version_setting_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/enable_auto_disconnected_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="bottom"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:text="Select your Internet connection type"/>

        <View
            android:id="@+id/deliver_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/custom_spinner_divider_line"
            android:layout_below="@+id/enable_auto_disconnected_title"/>

        <RelativeLayout
            android:id="@+id/ethernet_wan_connection_pppoe"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#ffffff"
            android:layout_below="@+id/enable_auto_disconnected_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PPPoE"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_textsize_14sp"
                    android:layout_marginLeft="@dimen/dimen_20dip"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Need account and password given by network operator"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_textsize_12sp"
                    android:layout_marginLeft="@dimen/dimen_20dip"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/pppoe_selected_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dimen_20dip"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_radio_on_disable"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/custom_spinner_divider_line"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ethernet_wan_connection_dhcp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/ethernet_wan_connection_pppoe"
            android:background="#ffffff">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DHCP"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_textsize_14sp"
                    android:layout_marginLeft="@dimen/dimen_20dip"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No need to set Internet parameters"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_textsize_12sp"
                    android:layout_marginLeft="@dimen/dimen_20dip"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/dhcp_selected_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dimen_20dip"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_radio_on_disable"
                android:visibility="gone"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/custom_spinner_divider_line"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ethernet_wan_connection_static_ip"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/ethernet_wan_connection_dhcp"
            android:background="#ffffff">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:id="@+id/linearLayout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Static IP"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_textsize_14sp"
                    android:layout_marginLeft="@dimen/dimen_20dip"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Need IP address and related info given by network operator"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_textsize_12sp"
                    android:layout_marginLeft="@dimen/dimen_20dip"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/static_ip_selected_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:background="@drawable/btn_radio_on_disable"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/linearLayout"
                android:layout_toEndOf="@+id/linearLayout"
                android:visibility="gone"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/custom_spinner_divider_line"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearlayout_pppoe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5dip"
            android:background="#ffffff"
            android:orientation="vertical"
            android:layout_below="@+id/ethernet_wan_connection_static_ip">

            <LinearLayout
                android:layout_width = "match_parent"
                android:layout_height = "48dp"
                android:orientation = "horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Account"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_textsize_14sp"
                    android:layout_marginLeft="@dimen/dimen_20dip"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"/>

                <EditText
                    android:id = "@+id/pppoe_account"
                    android:layout_width = "match_parent"
                    android:layout_height = "match_parent"
                    android:layout_marginLeft = "@dimen/dimen_12dip"
                    android:background = "@null"
                    android:hint = "Account"
                    android:textColor = "@color/grey_text"
                    android:textSize = "@dimen/dimen_textsize_14sp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/custom_spinner_divider_line"
                android:layout_marginLeft="@dimen/dimen_20dip"
                android:layout_marginRight="@dimen/dimen_20dip"
                android:layout_alignParentBottom="true"/>

            <LinearLayout
                android:layout_width = "match_parent"
            android:layout_height = "48dp"
            android:orientation = "horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/NETMODE_PASSWORD"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_textsize_14sp"
                android:layout_marginLeft="@dimen/dimen_20dip"
                android:layout_gravity="center_vertical"
                android:gravity="center"/>

            <EditText
                android:id="@+id/pppoe_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_12dip"
                android:background="@null"
                android:hint="@string/NETMODE_PASSWORD"
                android:textColor="@color/grey_text"
                android:textSize="@dimen/dimen_textsize_14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/custom_spinner_divider_line"
            android:layout_marginLeft="@dimen/dimen_20dip"
            android:layout_marginRight="@dimen/dimen_20dip"
            android:layout_alignParentBottom="true"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/NETMODE_MTU"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_textsize_14sp"
                    android:layout_marginLeft="@dimen/dimen_20dip"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Do not change default if not necessary"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_textsize_12sp"
                    android:layout_marginLeft="@dimen/dimen_20dip"/>
            </LinearLayout>

            <TextView
                android:id = "@+id/pppoe_mtu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_textsize_14sp"
                android:layout_marginLeft="@dimen/dimen_20dip"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textview_dhcp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Do not change default if not necessary"
        android:layout_marginTop="@dimen/dimen_5dip"
        android:padding="@dimen/dimen_20dip"
        android:background="#ffffff"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_textsize_12sp"
        android:layout_below="@+id/ethernet_wan_connection_static_ip"
        android:paddingLeft="@dimen/dimen_20dip"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/linearlayout_static_ip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5dip"
        android:background="#ffffff"
        android:orientation="vertical"
        android:layout_below="@+id/ethernet_wan_connection_static_ip"
        android:visibility="gone">

        <LinearLayout
            android:layout_width = "match_parent"
            android:layout_height = "48dp"
            android:orientation = "horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="IP address"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_textsize_14sp"
                android:layout_marginLeft="@dimen/dimen_20dip"
                android:layout_gravity="center_vertical"
                android:gravity="center"/>

            <EditText
                android:id = "@+id/static_ip_address"
                android:layout_width = "match_parent"
                android:layout_height = "match_parent"
                android:layout_marginLeft = "@dimen/dimen_12dip"
                android:background = "@null"
                android:hint = "IP address"
                android:textColor = "@color/grey_text"
                android:textSize = "@dimen/dimen_textsize_14sp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/custom_spinner_divider_line"
            android:layout_marginLeft="@dimen/dimen_20dip"
            android:layout_marginRight="@dimen/dimen_20dip"
            android:layout_alignParentBottom="true"/>

        <LinearLayout
            android:layout_width = "match_parent"
            android:layout_height = "48dp"
            android:orientation = "horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Subnet mask"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_textsize_14sp"
                android:layout_marginLeft="@dimen/dimen_20dip"
                android:layout_gravity="center_vertical"
                android:gravity="center"/>

            <EditText
                android:id = "@+id/static_ip_subnet_mask"
                android:layout_width = "match_parent"
                android:layout_height = "match_parent"
                android:layout_marginLeft = "@dimen/dimen_12dip"
                android:background = "@null"
                android:hint = "Subnet mask"
                android:textColor = "@color/grey_text"
                android:textSize = "@dimen/dimen_textsize_14sp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/custom_spinner_divider_line"
            android:layout_marginLeft="@dimen/dimen_20dip"
            android:layout_marginRight="@dimen/dimen_20dip"
            android:layout_alignParentBottom="true"/>

        <LinearLayout
            android:layout_width = "match_parent"
            android:layout_height = "48dp"
            android:orientation = "horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Default gateway"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_textsize_14sp"
                android:layout_marginLeft="@dimen/dimen_20dip"
                android:layout_gravity="center_vertical"
                android:gravity="center"/>

            <EditText
                android:id = "@+id/static_ip_default_gateway"
                android:layout_width = "match_parent"
                android:layout_height = "match_parent"
                android:layout_marginLeft = "@dimen/dimen_12dip"
                android:background = "@null"
                android:hint = "Default gateway"
                android:textColor = "@color/grey_text"
                android:textSize = "@dimen/dimen_textsize_14sp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/custom_spinner_divider_line"
            android:layout_marginLeft="@dimen/dimen_20dip"
            android:layout_marginRight="@dimen/dimen_20dip"
            android:layout_alignParentBottom="true"/>

        <LinearLayout
            android:layout_width = "match_parent"
            android:layout_height = "48dp"
            android:orientation = "horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Preferred DNS"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_textsize_14sp"
                android:layout_marginLeft="@dimen/dimen_20dip"
                android:layout_gravity="center_vertical"
                android:gravity="center"/>

            <EditText
                android:id = "@+id/static_ip_preferred_dns"
                android:layout_width = "match_parent"
                android:layout_height = "match_parent"
                android:layout_marginLeft = "@dimen/dimen_12dip"
                android:background = "@null"
                android:hint = "Preferred DNS"
                android:textColor = "@color/grey_text"
                android:textSize = "@dimen/dimen_textsize_14sp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/custom_spinner_divider_line"
            android:layout_marginLeft="@dimen/dimen_20dip"
            android:layout_marginRight="@dimen/dimen_20dip"
            android:layout_alignParentBottom="true"/>

        <LinearLayout
            android:layout_width = "match_parent"
            android:layout_height = "48dp"
            android:orientation = "horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Secondary DNS (optional)"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_textsize_14sp"
                android:layout_marginLeft="@dimen/dimen_20dip"
                android:layout_gravity="center_vertical"
                android:gravity="center"/>

            <EditText
                android:id = "@+id/static_ip_secondary_dns"
                android:layout_width = "match_parent"
                android:layout_height = "match_parent"
                android:layout_marginLeft = "@dimen/dimen_12dip"
                android:background = "@null"
                android:hint = "Secondary DNS (optional)"
                android:textColor = "@color/grey_text"
                android:textSize = "@dimen/dimen_textsize_14sp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/custom_spinner_divider_line"
            android:layout_marginLeft="@dimen/dimen_20dip"
            android:layout_marginRight="@dimen/dimen_20dip"
            android:layout_alignParentBottom="true"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/NETMODE_MTU"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_textsize_14sp"
                    android:layout_marginLeft="@dimen/dimen_20dip"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Do not change default if not necessary"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_textsize_12sp"
                    android:layout_marginLeft="@dimen/dimen_20dip"/>
            </LinearLayout>

            <TextView
                android:id = "@+id/static_ip_mtu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_textsize_14sp"
                android:layout_marginLeft="@dimen/dimen_20dip"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
</ScrollView>