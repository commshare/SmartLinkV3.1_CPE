<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edit_normal">

    <RelativeLayout
        android:id="@+id/upgrade_progress_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_120dip">
        <ImageView
            android:id="@+id/upgrade_progress_center"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5dip"/>
        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:layout_above="@id/upgrade_progress_center"
            android:layout_marginBottom="@dimen/dimen_5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/upgrade_progress_desc_tv"
                android:textSize="@dimen/font_size_normal"
                android:text="@string/setting_upgrading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/upgrade_progress_tv"
                android:text="0%"
                android:textSize="@dimen/font_size_normal"
                android:layout_toRightOf="@id/upgrade_progress_desc_tv"
                android:layout_marginLeft="@dimen/dimen_5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <ProgressBar
            android:id="@+id/upgrade_progressbar"
            style="@style/StyleProgressBarMini"
            android:layout_marginLeft="@dimen/dimen_20dip"
            android:layout_marginRight="@dimen/dimen_20dip"
            android:layout_marginTop="@dimen/dimen_15dip"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/upgrade_progress_center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_10dip"
            android:background="@drawable/shape_progressbar_bg_blue"
            android:max="100"
            android:progress="0" />
    </RelativeLayout>

</RelativeLayout>