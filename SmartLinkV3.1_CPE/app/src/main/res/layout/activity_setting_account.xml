<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/current_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/setting_current_password"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/dimen_12dip"
            android:paddingStart="@dimen/dimen_12dip"
            android:textColor="@color/grey_text"
            android:textDirection="locale"
            app:layout_heightPercent="10%h"
            app:layout_textSizePercent="2.2%h" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5dip"
            android:background="@color/gray" />

        <EditText
            android:textScaleX="0.9"
            android:id="@+id/new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/setting_new_password"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/dimen_12dip"
            android:paddingStart="@dimen/dimen_12dip"
            android:textColor="@color/grey_text"
            android:textDirection="locale"
            app:layout_heightPercent="10%h"
            app:layout_textSizePercent="2.2%h" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5dip"
            android:background="@color/gray" />

        <EditText
            app:layout_heightPercent="10%h"
            android:id="@+id/confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/setting_confirm_password"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/dimen_12dip"
            android:paddingStart="@dimen/dimen_12dip"
            android:textColor="@color/grey_text"
            android:textDirection="locale"
            app:layout_textSizePercent="2.2%h" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5dip"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/password_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_heightPercent="10%h"
            android:gravity="center"
            android:text="@string/login_forgot_password"
            android:textColor="@color/color_light_gray"
            android:textDirection="locale"
            android:textStyle="normal"
            app:layout_marginTopPercent="10%h"
            app:layout_textSizePercent="2.5%h" />
    </com.zhy.android.percent.support.PercentLinearLayout>
</com.zhy.android.percent.support.PercentRelativeLayout>
